.nemo {
	display: inline-block;
	width: 32px;
	height: 32px;
	border: 2px solid var(--primary-blue);
	border-radius: 4px;
}

.title .icon_badge {
	position: relative;
	display: flex;
	align-items: center;
	width: 90px;
	height: 28px;
	background: url(../img/EMA516_03_IH/0007_icon.png) no-repeat 0 0;
	padding: 0 10px 0 30px;
	margin-left: 28px;
	border-radius: 0 4px 4px 0;
	font-style: normal;
	font-size: 20px;
	color: #774e92;
	font-weight: 700;
	gap: 4px;
}
.title .icon_badge::before {
	content: "";
	position: absolute;
	left: -26px;
	top: -1px;
	width: 28px;
	height: 27px;

	background-size: 100%;
}
.title .icon_badge > span {
	font-size: 16px;
	font-weight: 400;
	color: #222;
}
.contents h3:has(.nemo) {
	align-items: center;
}
.contents h3:has(.nemo):before {
	margin-top: 0;
}
.input_area > span,
.input_area .text_row > span {
	display: inline-block;
	vertical-align: middle;
}
.input_area .text_row + .text_row {
	margin-top: 50px;
}
.text_square_bg {
	display: inline-block;
	vertical-align: middle;
	width: 47px;
	height: 46px;
	background: #d8e9f8;
	text-align: center;
	line-height: 45px;
	font-size: 18px;
	position: absolute;
	top: 0;
	left: 0;
}
.input_area .text_square_bg {
	position: static;
}
.img_area {
	position: relative;
}
.img_area p {
	position: absolute;
}

math-field.w_136 {
	width: 136px !important;
}

.input_wrap:has(.has_ex_text) .text_hint {
	padding-top: 10px;
}
math-field.has_ex_text + .text_hint:before {
	content: "ì˜ˆ";
	display: inline-block;
	vertical-align: middle;
	margin-right: 10px;
	width: 44px;
	height: 44px;
	background: var(--primary-blue);
	border-radius: 12px;
	color: #fff;
	line-height: 42px;
}
.solve_area .nemo {
	position: relative;
	top: 4px;
	background: #fff;
}
