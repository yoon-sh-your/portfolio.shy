/*EMA626_10_SU_0006_s*/
.ema626_10_su_0006 {
  .question_box {
    flex-direction: column;

    img {
      max-width: none;
    }
  }

  .img_box span {
    position: absolute;
    top:26px;
    font-size: 16px;
    font-weight: 700;

    &.name {
      font-size: 20px;
      color: #fff;
    }

  }
  .boolean_wrap button {
    position:relative;
    align-items: flex-start;
    width: auto;
    height: 240px;
    padding: 0;
    border-radius: 0;

    &:hover {
      border-color: transparent;
    }

    .name {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 84px;
      height: 84px;
      border:4px transparent solid;
      border-radius: 50%;
    }
    &:hover .name {
      border-color:var(--primary-blue-300);
    }
    &.selected {
      border-color: transparent;

      .name {
        border-color: var(--font-main);
      }
    }
  }
  .boolean_item01 {
    .txt {
      left:162px;
    }
    .name {
      top: 145px;
      left: 114px;
    }
  }
  .boolean_item02 {
    .txt {
      left:112px;
    }
    .name {
      top: 145px;
      left: 96px;
    }
  }
  .boolean_item03 {
    .txt {
      left:143px;
    }
    .name {
      top: 92px;
      left: 138px;
    }
  }
  .input_area {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap:20px;

    .input_wrap math-field.textarea {
      width: 1013px;
      height: 80px;
      min-height: auto;
    }
  }
  .result + .input_area .example_box {
    opacity: 1;
  }
}
