/*EMA626_10_SU_0002_s*/
.ema626_10_su_0002 {
  .figure_wrap {
    display: flex;
    align-items: flex-start;
    gap:20px;

    .figure_triangle {
      display: flex;
      align-items: flex-end;
      justify-content: space-between;
      width: 180px;
      height: 200px;
      padding: 10px 18px 18px;

      .txt {
        font-size: 32px;
        font-weight: 700;
        transform: translateY(-120px);
      }
    }
  }
  .input_area {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top:20px;
    gap:100px;

    li {
      display: flex;
      align-items: center;
      gap:12px;

      .tit {
        font-size: 32px;
        font-weight: 700;
      }
    }
   
    .custom_select {
      width: 178px;
    }
  }
}

/*EMA626_10_SU_0003_s*/
.ema626_10_su_0003 {
  .dragndrop_fraction_wrap{
    display: flex;
    align-items: center;
    gap:40px;
  }
  .drag_group {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    width: 258px;
    height: 335px;
    font-size: 32px;
    font-weight: 700;
    border:3px #EE4F24 solid;
    border-radius: 20px;
    padding: 71px 58px 85px;
    gap:16px;
 
    .drag_item {
      cursor: pointer;
    }
  }
  .drop_group {
    position:relative;

    .drop_item {
      position:absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      width:120px;
      height: 60px;
      border-radius: 12px;
      border:2px #3B71FE solid;
      font-size: 32px;
      font-weight: 700;

      &.drop_item1 {
        top: 35px;
        left: 205px;
      }
      &.drop_item2 {
        top: 180px;
        left: 7px
      }
      &.drop_item3 {
        top: 191px;
        left: 360px;
      }
      &.drop_item4 {
        width: 220px;
        top: 35px;
        left: 615px;
      }
      &.drop_item5 {
        top: 191px;
        left: 524px;
      }
      &.drop_item6 {
        top: 150px;
        left: 805px;
      }
    }
  }
  .dragndrop_fraction_wrap .drop_item[data-hint-position="up"]::after {
    top: auto !important;
    bottom: calc(100% + 4px);
  }
}

/*EMA626_10_SU_0004_s*/
.ema626_10_su_0004 {
  .question_box {
    justify-content: center;
    align-items: flex-start;
    gap:40px;
  }
  .input_form_wrap {
    display: flex;
    flex-direction: column;
    font-size: 32px;
    font-weight: 700;

    .img_area {
      position: relative;

      .text_area {
        position:absolute;
        top:21px;
        left:122px;
        display: flex;
        flex-direction: column;
      }
    }

    &:first-child {
      .text02 {
        transform: translate(133px, -24px);
      }
      .text03 {
        transform: translate(160px, 8px);
      }
    }
    &:last-child {
      .text01 {
        transform: translate(152px, 15px);
      }
    }
    .input_area {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      justify-content: center;
      width:447px;
      height: 270px;
      background: url(../img/EMA626_10_SU/0004_bg.svg) no-repeat 0 0;
      padding: 0 65px;
      gap:35px;

      .input_form {
        display: flex;
        align-items: center;
        gap:8px;
      }
    }
  }
}

/*EMA626_10_SU_0005_s*/
