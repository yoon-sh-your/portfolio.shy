    <script>
      window.onCorrectCustom = function () {
        let currentPage = 1;
        let pages = document.querySelectorAll('.page');
        pages.forEach((page, idx) => {
          if (page.offsetParent !== null) {
            currentPage = idx + 1;
          }
        });

        let pageEl = document.querySelector('.page_' + currentPage);
        let bottomWrap = pageEl.querySelector('.bottom');
        let inputWraps = bottomWrap.querySelectorAll('.input_wrap');
        let answer = '';
        let answerIndex = -1;
        inputWraps.forEach((wrap, idx) => {
          let mf = wrap.querySelector('math-field[data-answer-single]');
          if (mf) {
            answer = mf.getAttribute('data-answer-single');
            answerIndex = idx;
          }
        });
        if (answerIndex === -1 || !answer) return;

        document.querySelectorAll('.page').forEach((page) => {
          let bottoms = page.querySelectorAll('.bottom');
          bottoms.forEach((bottom) => {
            let wraps = bottom.querySelectorAll('.input_wrap');
            if (wraps[answerIndex]) {
              let mf = wraps[answerIndex].querySelector('math-field');
              if (mf) {
                mf.value = answer;
                if (typeof mf.setValue === 'function') mf.setValue(answer);
                mf.setAttribute('disabled', 'disabled');
                mf.classList.add('correct');
              }
            }
          });
        });
      };
