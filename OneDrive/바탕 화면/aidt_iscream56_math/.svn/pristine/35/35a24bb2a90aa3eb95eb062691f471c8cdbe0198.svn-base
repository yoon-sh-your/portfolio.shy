              <span class="txt0">0</span>
              <span class="txt1">1</span>
            </div>
          </div>
          <div class="input_area">
            1÷7 =
            <div class="fraction_box">
              <div class="input_wrap" data-hint-position="right">
                <math-field data-answer-single="1" text-align="center" class="w_80"></math-field>
              </div>
              <div class="input_wrap" data-hint-position="right">
                <math-field data-answer-single="7" text-align="center" class="w_80"></math-field>
