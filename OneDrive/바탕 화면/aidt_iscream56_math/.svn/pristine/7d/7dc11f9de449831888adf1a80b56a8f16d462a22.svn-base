        <script>
            runAfterAppReady(() => {
                const dragItemOptions = {
                    helper: "clone",
                    revert: "invalid",
                    revertDuration: 0,
                    start: function (event, ui) {
                        ui.position.left /= globalScale;
                        ui.position.top /= globalScale;
                        audioManager.playSound("drag");
                    },
                    drag: function (event, ui) {
                        ui.position.left /= globalScale;
                        ui.position.top /= globalScale;
                    },
                };

                const itemEl = `<div class="drag_item" data-pair="2" data-value="0.1">0.1</div>`;
                $(".click_item").on("click", (e) => {
                    $(e.target).addClass("used");
                    const $newItems = $(Array.from({ length: 10 }, () => itemEl).join(""))
                        .draggable(dragItemOptions)
                        .addClass("ui-draggable ui-draggable-handle");

                    $(".drag_group .items").append($newItems);
                });
            });
