/* ema626_06_ih_0004 */
.ema626_06_ih_0004 .draggable_wrap {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 20px;
	width: 268px;
	height: 108px;
	margin: 0 auto 60px;
	border: 1px solid #d2d2d2;
	background-color: #f7f7f7;
	border-radius: 16px;
	text-align: center;
}
.ema626_06_ih_0004 .draggable_wrap > span {
	display: inline-block;
	vertical-align: middle;
	width: 84px;
	height: 84px;
	background-repeat: no-repeat;
	background-position: 50%;
	background-size: 60px auto;
}
.ema626_06_ih_0004 .draggable_wrap .circle {
	background-image: url(./../img/EMA626_06_IH/mark_circle.svg);
}
.ema626_06_ih_0004 .draggable_wrap .triangle {
	background-image: url(./../img/EMA626_06_IH/mark_x.svg);
}

.ema626_06_ih_0004 .drag_group .droppable {
	display: inline-block;
	width: 120px;
	height: 60px;
	border: 2px solid var(--primary-blue);
	border-radius: 12px;
}
.ema626_06_ih_0004 .drag_group {
	width: 1000px;
}
.ema626_06_ih_0004 .drag_group li {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 24px;
}
.ema626_06_ih_0004 .drag_group li .l_right {
	display: flex;
	align-items: center;
	gap: 10px;
}
.ema626_06_ih_0004 .droppable > div {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
}

.ema626_06_ih_0004 .droppable .triangle:before {
	content: "";
	display: inline-block;
	width: 46px;
	height: 46px;
	mask: url(../img/EMA626_06_IH/mark_x_sm.svg) no-repeat 50% / 26px auto;
	background-color: var(--font-main);
}
.ema626_06_ih_0004 .droppable .circle::before {
	content: "";
	display: inline-block;
	width: 46px;
	height: 46px;
	mask: url(../img/EMA626_06_IH/mark_circle_sm.svg) no-repeat 50% / 35px auto;
	background-color: var(--font-main);
}
.ema626_06_ih_0004 .drag_group.correct .l_right .droppable > div:before {
	background-color: var(--primary-blue);
}
.ema626_06_ih_0004 .drag_group.hint .l_right .droppable {
	border-color: var(--secondary-red);
}
.ema626_06_ih_0004 .drag_group.hint .l_right .droppable > div:before {
	background-color: var(--secondary-red);
}
