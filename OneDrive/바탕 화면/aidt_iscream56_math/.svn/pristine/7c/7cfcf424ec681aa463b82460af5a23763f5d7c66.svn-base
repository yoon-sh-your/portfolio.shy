/* ema523_01_ih_0003 */
.ema523_01_ih_0003 .quiz_area {
  display: flex;
  position: relative;
}

.ema523_01_ih_0003 .quiz_area + .quiz_area {
  margin-left: 175px;
}

.ema523_01_ih_0003 .connect_point {
  position: absolute;
  width: 50px;
  height: 50px;
  background-color: transparent;
  z-index: 1;
}
.ema523_01_ih_0003 .connect_point::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 16px;
  height: 16px;
  background-color: #000;
  border-radius: 100%;
}
.ema523_01_ih_0003 .connect_point.selected::before {
  background-color: #3b71fe;
}

