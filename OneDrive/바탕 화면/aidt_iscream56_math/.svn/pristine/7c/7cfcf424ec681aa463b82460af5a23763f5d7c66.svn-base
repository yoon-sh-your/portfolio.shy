/* ema523_01_ih_0001 */
.ema523_01_ih_0001 .quiz_area {
  position: relative;
  width: 600px;
  height: 240px;
  margin: 0 auto;
}

.ema523_01_ih_0001 .quiz_area .line_area {
  position: absolute;
  top: 0;
  left: 0;
  width: 240px;
  height: 240px;
  display: flex;
  flex-direction: column;
  flex: 1;
  border: dashed 2px #00a0e9;
}

.ema523_01_ih_0001 .quiz_area .line_area + .line_area {
  left: auto;
  right: 0;
}

.ema523_01_ih_0001 .quiz_area .line_area .column {
  width: 100%;
  height: 60px;
  display: flex;
}

.ema523_01_ih_0001 .quiz_area .line_area .column + .column {
  border-top: dashed 1px #00a0e9;
}

.ema523_01_ih_0001 .quiz_area .line_area .column .row {
  flex: 1;
  width: 60px;
  height: 100%;
}

.ema523_01_ih_0001 .quiz_area .line_area .column .row + .row {
  border-left: dashed 1px #00a0e9;
}

.ema523_01_ih_0001 .quiz_area .drawing_grid_area {
  position: absolute;
  top: 0;
  right: 0;
  width: 240px;
  height: 240px;
  border: none;
  background: none;
}
.ema523_01_ih_0001 .quiz_area .drawing_grid_area svg {
  overflow: visible;
}
.ema523_01_ih_0001 .quiz_area .drawing_grid_area line {
  stroke-width: 4;
}

.ema523_01_ih_0001 .quiz_area .image {
  width: 240px;
  position: absolute;
  top: 0;
  left: 0;
}

.ema523_01_ih_0001 .quiz_area .image2,
.ema523_01_ih_0001 .quiz_area .image4 {
  width: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* ema523_01_ih_0002 */
.ema523_01_ih_0002 .quiz_area {
  position: relative;
  width: 350px;
  height: 280px;
}

.ema523_01_ih_0002 .quiz_area + .quiz_area {
  margin-left: 100px;
}

.ema523_01_ih_0002 .quiz_area .line_area {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
  border: dashed 2px #00a0e9;
}

