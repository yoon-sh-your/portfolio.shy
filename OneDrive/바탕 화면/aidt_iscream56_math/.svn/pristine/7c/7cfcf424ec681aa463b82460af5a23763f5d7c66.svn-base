  width: 100%;
  height: 35px;
  display: flex;
}

.ema523_01_ih_0002 .quiz_area .line_area .column + .column {
  border-top: dashed 1px #00a0e9;
}

.ema523_01_ih_0002 .quiz_area .line_area .column .row {
  flex: 1;
  width: 35px;
  height: 100%;
}

.ema523_01_ih_0002 .quiz_area .line_area .column .row + .row {
  border-left: dashed 1px #00a0e9;
