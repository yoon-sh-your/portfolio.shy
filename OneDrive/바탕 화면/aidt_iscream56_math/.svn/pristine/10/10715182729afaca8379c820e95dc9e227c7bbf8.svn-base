.ema526_10_ih_0002 .review_box .title_review {
  background-image: url(../img/EMA526_10_IH/title_review.svg);
}

.ema526_10_ih_0001 .picture_wrap {
  border: 0;
  border-radius: 0;
  aspect-ratio: unset;
  position: relative;
  width: 826px;
}

.ema526_10_ih_0001 .picture_wrap button {
  position: absolute;
  bottom: auto;
  right: 20px;
  top: 220px;
}

.ema526_10_ih_0001 .img_are {
  position: relative;
  width: 826px;
}

.ema526_10_ih_0001 .img_are .picture_wrap {
  position: relative;
}
.ema526_10_ih_0001 .img_are .picture_wrap img {
  width: 826px;
  position: relative;
