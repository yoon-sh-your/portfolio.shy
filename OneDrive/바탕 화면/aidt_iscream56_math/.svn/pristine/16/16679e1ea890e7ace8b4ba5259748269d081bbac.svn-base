/* EMA522_03_SU_0002_s  */
.ema522_04_su_0002 {
    .video_wrap {
        position: relative;

        img {
            width: auto;
            max-width: none;
            height: 100%;
        }

        .svg {
            position: absolute;
            right: 188px;
            top: -3px;
            width: 218px;
            height: 140px;
            text-align: center;
            padding-top: 24px;
            z-index: 1;
            background: url(../img/EMA522_04_SU/0002_img01_1.png) no-repeat 0 / 100%;
        }
    }

    .input_wrap {
        width: 100%;
    }
}

/* .ema522_03_su_0003 */
.ema522_04_su_0003 {
    .page_1 {
        .input_wrap math-field:not(.textarea) {
            width: 300px;
            height: 112px;
        }

        .img_area {
            position: relative;
            width: 961px;
            height: 210px;
            flex: none;
            margin: auto;

            &>.flex:nth-last-child(1) {
                position: absolute;
                top: 65px;
                left: 570px;
                width: 212px;
            }

            &>.flex:nth-last-child(2) {
                position: absolute;
                top: 78px;
                left: 190px;
                width: 280px;
            }
        }
    }

    .page_2 {
        .input_wrap math-field:not(.textarea) {
            max-width: 80px;
        }

        .boolean-counts {
            position: relative;
            width: 1110px;
            height: 426px;
            background: url(../img/EMA522_04_SU/0003_img02.png) no-repeat 0 / 100%;

            .boolean_count_wrap {
                position: absolute;
                left: 161px;
                top: 155px;
                border: none;
                gap: 2px;

                &.col button:not(:first-child)::before {
                    height: 2px;
                }

                button {
                    width: 94px;
                    height: 35px;

                    &.selected {
                        background-color: #5f5f5f;
                    }
                }
            }

            .boolean_count_wrap button:not(:first-child)::before {
                width: 2px;
                background-image: repeating-linear-gradient(to bottom, #7e7e7e, #2b2b2b 3px, transparent 3px, transparent 5px);
                position: absolute;
                top: 0;
                left: -3px;
            }


            .abs_1 {
                position: absolute;
                top: 140px;
                left: 30px;
            }

            .abs_2 {
                position: absolute;
                top: 50px;
                left: 870px;
            }

            .abs_3 {
                position: absolute;
                top: 48px;
                left: 152px;
                font-size: 24px;
                display: flex;
                flex-wrap: wrap;
                gap: 110px 84px;
                width: 600px;
            }

            .abs_4 {
                position: absolute;
                bottom: 10px;
                right: -150px;
                background: url(../img/EMA522_04_SU/0003_img03.png) no-repeat 0 / 100%;
                width: 300px;
                height: 230px;

                .balloon {
                    position: absolute;
                    bottom: 70px;
                    left: -40px;
                    background: url(../img/EMA522_04_SU/0003_img03_1.png) no-repeat 0 / 100%;
                    width: 204px;
                    height: 174px;
                    padding-top: 30px;
                    padding-right: 11px;

                }
            }
        }
    }

    .page_3 {
        .picture_wrap {
            flex: 0 0 auto;
            width: 812px;
            position: relative;
        }

        .svg {
            position: absolute;
            right: 219px;
            top: -3px;
            width: 218px;
            height: 140px;
            text-align: center;
            padding-top: 24px;
            z-index: 1;
            background: url(../img/EMA522_04_SU/0002_img01_1.png) no-repeat 0 / 100%;
        }

        /* .input_wrap math-field:not(.textarea) {
            width: 80px;
            height: 112px;
        } */
    }
}

