/* .ema522_03_su_0005 */
.ema522_04_su_0005 {
    .question_box {
        flex-wrap: wrap;
        width: 1000px;
        gap: 100px 200px;

        .mixed_fraction {
            &:nth-child(1) {

                .input_wrap,
                .input_wrap input,
                .input_wrap math-field {
                    width: 80px;
                    min-width: 80px;
                }
            }

            &:nth-child(2),
            &:nth-child(3),
            &:nth-child(4) {

                .input_wrap,
                .input_wrap input,
                .input_wrap math-field {
                    width: 247px;
                    min-width: 80px;
                }
            }
        }

        &>.flex {
            flex: 1;
        }
    }

    .input_wrap[data-hint-position="top"] .text_hint {
        top: auto !important;
        bottom: calc(100% + 4px);
    }
}