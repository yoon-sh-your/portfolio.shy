.ema522_06_su_0004 {

  h3 img {
    display: inline-block;
  }

  .summarize_wrap .summarize {
    width: 900px;
  }

  .page_1 {

    /*EMA611_10_SU_0003_s*/
    .empty_box {
      width: 32px;
      height: 32px;
      margin-left: 4px;
      padding: 0;
      border-radius: 4px;
    }

    .ex_box {
      width: 620px;
      height: 408px;
      margin-left: 240px;
      border-radius: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 140px;
      position: relative;

      .abs_1 {
        position: absolute;
        top: 32px;
        left: 112px;
      }

      .abs_2 {
        position: absolute;
        top: 32px;
        left: 483px;
      }
    }

    .ex_box .ex_tag {
      position: absolute;
      top: -18px;
      left: 34px;
    }

    .ex_box .text,
    .input_area .text_box {
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .ex_box .text span,
    .input_area .text_box>span {
      font-weight: 700;
      font-size: 32px;
      /* line-height: 48px; */
      letter-spacing: -1px;
    }

    .input_area .text_box>.fraction_box>span {
      font-size: 32px;
    }

    .input_area {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 120px;
      position: absolute;
      bottom: 0;
      right: 0;
    }

    .input_area .img_box {
      position: relative;
    }

    .input_area .img_box::before {
      content: none;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 45px;
      height: 45px;
      background-color: var(--primary-blue);
      color: var(--font-main-reverse);
      font-size: 26px;
      font-weight: 700;
      border-radius: 12px;
      position: absolute;
      top: 0px;
      left: -10px;
      transform: translateX(-100%);
    }

    .input_area .img_box.on::before {
      content: '예';
    }

    .input_area .img_box .boolean_count_wrap {
      height: 258px;
      border: none;
      flex-direction: column;
      flex-wrap: wrap;
      gap: 0;
      position: absolute;
      bottom: -3px;
      left: 2px;
    }

    .input_area .img_box .boolean_count_wrap button {
      display: block;
      width: 50px;
      height: 84px;
      background-color: transparent;
      border: none;

      &.correct {
        border: 1px solid black;
        background-color: var(--secondary-red);
      }
    }

    .input_area .img_box .boolean_count_wrap button.selected {
      background: url(../../common_contents/img/EMA522_06_SU/0004_img02_on.png) no-repeat -1px -1px;
      background-size: contain;
    }

    .input_area .img_box .boolean_count_wrap button::before,
    .input_area .img_box .boolean_count_wrap button::after {
      content: none;
    }

    .input_wrap,
    .input_wrap math-field {
      width: 80px;
      min-width: 80px;
    }

  }

  .page_2 {
    .img_box {
      position: relative;
      width: 1120px;
      height: 370px;
      margin: auto;
      background: url(../../common_contents/img/EMA522_06_SU/0004_img03.png) no-repeat center 0 / 100%;
      display: flex;
      align-items: flex-end;
      justify-content: center;

      .abs_1 {
        position: absolute;
        top: 60px;
        left: 260px;
        text-align: center;
        width: 223px;

        .input_wrap .text_hint {
          top: 14px;
          left: 80px;
        }
      }

      .abs_2 {
        position: absolute;
        top: 26px;
        left: 588px;
        text-align: center;
        width: 380px;

        .input_wrap .text_hint {
          top: 14px;
          left: 80px;
        }
      }
    }
  }

  .page_3 {
    .img_box {
      position: relative;
      width: 600px;
      height: 180px;
      margin: auto;
      background: url(../../common_contents/img/EMA522_06_SU/0004_img04.png) no-repeat center 0 / 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  .page_4 {
    .input_area {
      /* position: relative; */
      text-align: center;

      .input_wrap {
        width: 1208px;
        margin: auto;

        math-field.textarea {
          max-height: 300px;
        }

        .example_box {
          height: 98px;
          /* padding: 4px 24px 4px 82px; */
        }
      }
    }
  }

  &[data-current-page='page_5'] .title h2[data-head] {
    display: none;
  }

  &:not([data-current-page='page_4']) .btn_area .btnSubmit,
  /* &:[data-current-page='page_1'] .btnSubmit,
  &:[data-current-page='page_2'] .btnSubmit,
  &:[data-current-page='page_3'] .btnSubmit,
  &:[data-current-page='page_5'] .btnSubmit, */
  &[data-current-page='page_4'] .btnCheck,
  &[data-current-page='page_5'] .btnType {
    display: none;
  }
}

