/*EMA626_07_SU_0002_s*/
.ema626_07_su_0002 {
  .img_wrap {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 1200px;
        
    .text_box {
      top: 23px;
      left: 377px;

      span {
        font-size: 24px;

        &.text01 {
          font-weight: 700;
        }
        &.text02 {
          transform: translate(-167px, 47px);
        }
        &.text03 {
          transform: translate(294px, 4px);
        }
        &.text04 {
          transform: translate(10px, 35px);
        }
        &.text05 {
          transform: translate(10px, 75px);
        }
        &.text06 {
          transform: translate(10px, 105px);
        }
        &.text04,&.text05,&.text06 {
          color: #fff;
          font-size: 32px;
          font-weight: 700;
        }
      }
    }
  }
}

/*EMA626_07_SU_0003_s*/
.ema626_07_su_0003 {
  .img_wrap {
    position: relative;
    flex-shrink: 0;
  }
  .text_box {
    top: 66px;
    left: 92px;

    &.type2 {
      top: 309px;
      left: 179px;
      display: flex;
      flex-direction: row;
      gap: 40px;

      span {
        font-size: 14px;
        font-weight: 700;
      }
    }
  
    span {
      display: flex;
      align-items: center;
      font-size: 20px;
      gap: 5px;

      .num {
        font-size: 32px;
        color: #285AA1;
      }

      &.text02 {
        align-items: flex-start;
        margin-top:7px;
        .num {
          margin-top:-7px;
        }
      } 
      &.text06 {
        transform: translateX(-5px);
      }
      &.text07 {
        transform: translateX(-13px);
      }
      &.text08 {
        transform: translateX(-17px);
      }
    }
  }
  .text_noti {
    text-align: center;
    margin-top:-23px;
    transform: translateX(0);
  }
  .input_wrap {
    width:100%;

    math-field.textarea {
      height: 225px;
    }
  }
}
.text_box {
  position: absolute;
  display: flex;
  flex-direction: column;
}
.text_noti {
  width: 100%;
  font-size: 16px;
  text-align: right;
  margin-top:10px;
  transform: translateX(-90px);
}

.ema626_07_su_0003[data-current-page="page_1"] .btnCheck,
.ema626_07_su_0003[data-current-page="page_2"] .btnSubmit {
  display: none;
}

.form_box {
  width:1194px;
  height: 420px;

  li {
    display: flex;
    align-items: flex-start;
    font-size: 32px;
    font-weight: 700;

    &:first-child .vertical1 {
      border-radius: 20px 0 0 0;
      height: 202px;
    }
    &:first-child .vertical {
      padding:10px 45px;
    }
    &:last-child .vertical1 {
      border-radius: 0 0 0 20px;
    }
    &:first-child .vertical2 {
      border-radius: 0 20px 0 0;
    }
    &:last-child .vertical2 {
      border-radius: 0 0 20px 0;
    }
  }
  .vertical {
    position:relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 286px;
    height: 100%;
    padding:5px 45px;
    border: 1px solid #DADADA;
    border-left: 0;
    gap:7px;

    .input_wrap {
      width: auto;
      align-items: center;
    }
  }
  .vertical1 {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 276px;
    height: 100%;
    background-color: #fdece3;
    padding: 10px 15px;
    border: 1px solid #fdece3;
    border-color: #fdece3 #fff #fff #fdece3;
    gap:7px;
  }
  .txt_box {
    position:absolute;
    top: 10px;
    left: 109px;
    display: flex;
    flex-direction: column;
    font-size: 18px;
    font-weight: 700;
    gap:50px;

    .txt02 {
      transform: translate(83px, 11px);
    }
    .txt03 {
      transform: translate(-49px, 0px);
    }
  }
  .item2 {
    .txt_box {
      left:127px;
      .txt02 {
        transform: translate(73px, 11px);
      }
    }
  }
  .item3 {
    .txt_box {
      top:14px;
      left:126px;
      .txt02 {
        transform: translate(84px, 8px);
      }
      .txt03 {
        transform: translate(-48px, -10px);
      }
    }
  }
}
