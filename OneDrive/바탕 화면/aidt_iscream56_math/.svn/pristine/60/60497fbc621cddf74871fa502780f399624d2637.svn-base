.ema622_03_ih_0001 .question_box .bottom:after {top:0; right:0; background:url(../img/EMA622_02_IH/0001_arrow_bottom.svg) no-repeat right top}
.ema622_03_ih_0001 .question_box .middle {display:flex; align-items:center; gap:100px;}
.ema622_03_ih_0001 .question_box .pink,
.ema622_03_ih_0001 .question_box .green {display:inline-flex; justify-content:center; align-items:center; min-width:45px; height:56px; border-radius:12px; padding:0 12px;}
.ema622_03_ih_0001 .question_box .pink {background-color:#FFE6E2;}
.ema622_03_ih_0001 .question_box .green {background-color:#E2EDD7;}
.ema622_03_ih_0001 .question_box .right .flex {padding:12px 24px; border-radius:12px; background:#FFEDCF;}
