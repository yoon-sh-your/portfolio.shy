.ema622_03_ih_0001 .question_box .times:after {content:''; position:absolute; width:50%; height:30px;}
.ema622_03_ih_0001 .question_box .times .flex {position:relative; background:#fff; z-index:2;;}
.ema622_03_ih_0001 .question_box .times .flex span {margin-right:8px;}
