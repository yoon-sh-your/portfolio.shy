<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EMA524_04_IH_0003_s</title>

    <!-- 공통 js-->
    <script src="../../common_contents/common/js/app.js"></script>
    <script src="../../common_practice/common/js/solve_area_act.js"></script>

    <!-- 공통 css-->
    <link rel="stylesheet" href="./../../common_contents/common/css/app.css" />

    <!-- 개별 -->
    <link rel="stylesheet" href="./../../common_practice/common/css/app.css" />
    <link rel="stylesheet" href="./../../common_practice/css/ema524_04.css" />
  </head>
  <body>
    <div id="app_wrap" class="ema524_04_ih_0003">
      <section class="title type2">
        <h2 data-head="3" lang="y">계산해 보세요.</h2>
      </section>

      <section class="contents">
        <div class="input_area">
          <div class="flex justify_center gap_120">
            <div class="question_box dir_col">
              <div class="flex align_start">
                <span class="flex align_center mt_6">7×0.6=</span>
                <div class="flex dir_col gap_40">
                  <div class="input_wrap">
                    <math-field data-answer-single="4.2"></math-field>
                  </div>
                  <div class="calc_vertical mt_20">
                    <div class="top">
                      <span>17</span>
                      <span class="operator">×</span>
                      <span>0.9</span>
                    </div>
                    <div class="input_wrap">
                      <math-field data-answer-single="15.3"></math-field>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="question_box dir_col">
              <div class="flex align_start">
                <span class="flex align_center mt_6">40×1.4=</span>
                <div class="flex dir_col gap_40">
                  <div class="input_wrap">
                    <math-field data-answer-single="56"></math-field>
                  </div>
                  <div class="calc_vertical mt_20">
                    <div class="top">
                      <span>8</span>
                      <span class="operator">×</span>
                      <span>3.2</span>
                    </div>
                    <div class="input_wrap">
                      <math-field data-answer-single="25.6"></math-field>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="solve_area">
          <div class="inner_solve">
            <div class="flex">
              <strong class="tit_solve" lang="y">해설</strong>
              <div class="conts_solve">
                <div class="flex align_center gap_0" lang="y">
                  7×0.6=7×
                  <div class="fraction_box">
                    <span>6</span>
                    <span>10</span>
                  </div>
                  =
                  <div class="fraction_box">
                    <span>42</span>
                    <span>10</span>
                  </div>
                  = 4.2
                </div>
                <div class="flex align_center gap_0 mt_20" lang="y">
                  40×1.4=40×
                  <div class="fraction_box">
                    <span>14</span>
                    <span>10</span>
                  </div>
                  =
                  <div class="fraction_box">
                    <span>560</span>
                    <span>10</span>
                  </div>
                  = 56
                </div>
                <div class="flex align_center gap_20 mt_20" lang="y">
                  <div class="calc_vertical">
                    <div class="top">
                      <span>17</span>
                      <span class="operator">×</span>
                      <span>9</span>
                    </div>
                    <div class="bottom">153</div>
                  </div>
                  →
                  <div class="calc_vertical">
                    <div class="top">
                      <span>17</span>
                      <span class="operator">×</span>
                      <span>0.9</span>
                    </div>
                    <div class="bottom">15.3</div>
                  </div>
                </div>
                <div class="flex align_center gap_20 mt_20" lang="y">
                  <div class="calc_vertical">
                    <div class="top">
                      <span>8</span>
                      <span class="operator">×</span>
                      <span>32</span>
                    </div>
                    <div class="bottom">256</div>
                  </div>
                  →
                  <div class="calc_vertical">
                    <div class="top">
                      <span>8</span>
                      <span class="operator">×</span>
                      <span>3.2</span>
                    </div>
                    <div class="bottom">25.6</div>
                  </div>
                </div>
              </div>
            </div>
            <!-- <div class="buttons_solve">
                  
              </div> -->
          </div>
        </div>
        <div class="btn_area">
          <button class="btnType key">입력타입토글</button>
          <button class="btnReset">리셋</button>
          <button class="btnCheck">확인</button>
        </div>
      </section>
    </div>
  </body>
</html>
