                    <option value=">">></option>
                    <option value="=">=</option>
                    <option value="<"><</option>
                  </select>
                </div>
                <div class="fra_col col2">
                  <div class="fra_inn fra_ex">
                    <span>0.48</span>
                  </div>
                  <div class="fra_inn">
                    <span>0.48</span>
                    =
                    <span class="fraction_box">
                      <span class="input_wrap">
                        <math-field data-answer-single="48"></math-field>
