/* ema524_08_SU_0002 */

.ema524_08_su_0002 .video_wrap {
  background: url(../../common_contents/img/EMA524_07_SU/0002_contents.png)
    no-repeat center 100% / 103%;
}
.ema524_08_su_0002 .video_wrap p {
  position: absolute;
  top: 86%;
  left: 55%;
  transform: rotate(5deg);
  text-align: center;
}

/* ema524_08_SU_0003 */
.ema524_08_su_0003 .contents h3 {
  align-items: center;
}

.ema524_08_su_0003 .custom_select {
  width: 200px;
}

.ema524_08_su_0003 .note-paper .paper-con > span > span {
  display: inline-block;
  width: 120px;
}

/* ema524_08_SU_0004 */
.ema524_08_su_0004 .page_1 > div {
  display: flex;
  flex-wrap: wrap;
}
.ema524_08_su_0004 .page_1 > div > div {
  min-width: 50%;
  padding-top: 30px;
  margin: 0 auto;
}
.ema524_08_su_0004 .page_2 .wrap {
  text-align: center;
}

.ema524_08_su_0004 .page_2 .input_wrap math-field.textarea {
  min-height: 288px;
}

/* ema524_08_SU_0005 */
.ema524_08_su_0005 .wrap {
  width: 1200px;
  margin: 50px auto 0;
  background: url(../../common_contents/img/EMA524_07_SU/0005_bg.png) no-repeat
    center center;
  height: 320px;
  display: flex;
  justify-content: center;
}
.ema524_08_su_0005 .wrap > div {
  min-width: 50%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 50px 70px;
  gap: 20px;
}

.ema524_08_su_0005 .wrap > div:first-child {
  padding-left: 215px;
}
.ema524_08_su_0005 .wrap > div:last-child {
  padding-right: 215px;
}

.ema524_08_su_0005 .wrap > div > div > span:first-child {
  display: inline-block;
  width: 165px;
}

/* ema524_08_SU_0006 */
