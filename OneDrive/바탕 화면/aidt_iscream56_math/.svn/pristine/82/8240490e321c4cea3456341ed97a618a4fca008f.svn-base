.ema613_02_su_0004 .page_1 .reveal_wrap {
    position: relative;
    display: block;
    margin: 0 auto;
    width: 600px;
    height: 416px;
    background: url(../img/EMA613_02_SU/0004_bg01.png) no-repeat center 0 / 100%;
}

.reveal_wrap .reveal_btn[data-pair='1'] {
    position: absolute;
    left: 73px;
    top: 5px;
}

.reveal_wrap .reveal_btn[data-pair='2'] {
    position: absolute;
    left: 394px;
    top: 5px;
}

.reveal_wrap .reveal_btn[data-pair='3'] {
    position: absolute;
    left: 24px;
    top: 314px;
    background-color: #feeee7;
    width: 269px;
    height: 80px;
    font-size: 20px;
    line-height: 32px;
    padding: 0;
}

.reveal_wrap .reveal_btn[data-pair='4'] {
    position: absolute;
    left: 308px;
    top: 314px;
    background-color: #feeee7;
    width: 269px;
    height: 80px;
    font-size: 20px;
    line-height: 32px;
    padding: 0;
}

.reveal_wrap .reveal_btn[data-pair='3']::before,
.reveal_wrap .reveal_btn[data-pair='4']::before {
    top: 10px;
    left: 0;
    right: 0;
    bottom: 10px;
    background-color: #feeee7;
}

.reveal_wrap .reveal_btn {
    padding: 0 2px 24px;
    border: none;
    background: none;
    width: 158px;
    height: 90px;
}

.reveal_wrap .reveal_btn::before {
    width: auto;
    height: auto;
    top: 10px;
    left: 0;
    right: 0;
    bottom: 20px;
}

.reveal_btn:not(:disabled):after {
    bottom: 10px;
}

.reveal_btn[data-pair='3']:not(:disabled):after,
.reveal_btn[data-pair='4']:not(:disabled):after {
    bottom: -6px;
}

.reveal_wrap .reveal_btn {
    font-size: 16px;
    font-weight: bold;
    line-height: 23px;
}

