/* EMA613_02_SU_0002_s */
.ema613_02_su_0002 {
    .video_wrap {
        background: url(../img/EMA613_02_SU/0003_content.png) no-repeat center right 0 / 100%;
    }
}

/* EMA613_02_SU_0003_s */
.ema613_02_su_0003 {
    .page_1 {
        .picture_wrap img {
            width: auto;
            right: 0;
            left: unset;
            transform: translate(0, -50%);
        }

        .answer1 math-field:not(.textarea) {
            width: 212px;
        }
    }

    .input_area {
        width: 715px;
    }

    .page_2 {

        .input_wrap .text_hint {
            top: auto !important;
            bottom: calc(100% + 4px);
        }

        .page_2_cover {
            display: flex;
            justify-content: center;
            gap: 12px;

            &:before {
                content: 'ì˜ˆ';
                display: inline-flex;
                width: 44px;
                height: 44px;
                background-color: #3b71fe;
                border-radius: 12px;
                color: #fff;
                font-size: 27px;
                align-items: center;
                justify-content: center;
                flex-shrink: 0;
                margin-top: 20px;
                opacity: 0;
            }

            .question_box {
                flex-direction: column;
                gap: 0;
                width: 1200px;
                height: 258px;
                background: url(../img/EMA613_02_SU/0003_bg.png) no-repeat center 0 / 100%;
                padding-top: 45px;
            }
        }

        &.completed {
            .page_2_cover {
                &:before {
                    opacity: 1;
                }

            }

        }

        .question_box>div>span {
            font-size: 32px;
            font-weight: 700;
            line-height: 48px;
            letter-spacing: -1px;
        }

        .group_box {
            background-color: transparent;
        }
    }

    .page_4 {
        .input_area h3 {
            margin-bottom: 40px;
        }
    }

    .page_3 {
        width: 100%;
    }

    .input_wrap math-field.textarea {
        height: 308px;
    }

    .summarize>div:nth-child(3) {
        height: 110px;
    }

    .page_4 span {
        font-weight: 700;
        font-size: 32px;
        line-height: 48px;
        letter-spacing: -1px;
    }

    .hidden_obj[data-pair='1'] {
        width: 62px;
        position: absolute;
        top: 0px;
        left: -225px;
    }

    /* &[data-current-page='page_2'] .contents>div.flex,
    &[data-current-page='page_3'] .contents>div.flex,
    &[data-current-page='page_4'] .contents>div.flex, */
    &[data-current-page='page_1'] .btn_area .btnSample,
    &[data-current-page='page_1'] .btn_area .btnSubmit,
    &[data-current-page='page_2'] .btn_area .btnSubmit,
    &[data-current-page='page_2'] .btn_area .btnCheck,
    &[data-current-page='page_3'] .btn_area .btnType,
    &[data-current-page='page_3'] .btn_area .btnSample,
    &[data-current-page='page_3'] .btn_area .btnSubmit,
    &[data-current-page='page_4'] .btn_area .btnSample,
    &[data-current-page='page_4'] .btn_area .btnSubmit {
        display: none;
    }

    .page_3 {
        .dragndrop_fraction_wrap {
            display: flex;
            gap: 174px;
            justify-content: center;
            align-items: center;
        }

        .dragndrop_fraction_wrap::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-80%, 10%);
            width: 94px;
            height: 82px;
            background: url(../img/EMA613_02_SU/0003_img01.png) no-repeat center;
        }

        .dragndrop_fraction_wrap .drop_group_wrap {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 40px;
        }

        .dragndrop_fraction_wrap .drag_group {
            display: flex;
            flex-wrap: wrap;
            gap: 22px;
            align-items: center;
            justify-content: center;
            width: 506px;
            height: 254px;
        }

        .dragndrop_fraction_wrap .drag_item {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 77px;
            height: 77px;
            background-color: #bcd5f0;
            border: 1px solid #1d1d1b;
            text-align: center;
            font-size: 44px;
        }

        .dragndrop_fraction_wrap .drag_item[data-pair='1'] {
            width: 110px;
            height: 110px;
        }

        .dragndrop_fraction_wrap .drag_item[data-pair='2'] {
            background-color: #fadceb;
            font-size: 32px;
        }

        .dragndrop_fraction_wrap .drop_group {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 22px;
            border: 2px solid #9e9e9e;
            border-radius: 40px;
            padding: 32px 43px;
        }


        .dragndrop_fraction_wrap .drop_group .drag_item {
            opacity: 1;
        }

        .dragndrop_fraction_wrap .drop_item {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 77px;
            height: 77px;
            border: 1px solid #000;
            position: relative;
        }

        .dragndrop_fraction_wrap .drop_item[data-pair='1'] {
            width: 110px;
            height: 110px;
        }

        .dragndrop_fraction_wrap .drop_item[data-pair='2'] {
            width: 77px;
            height: 77px;
        }

        .drag_item.used {
            opacity: 0.4;
        }
    }

    .page_4 .question_box+.question_box {
        margin-top: 72px;
    }


}


