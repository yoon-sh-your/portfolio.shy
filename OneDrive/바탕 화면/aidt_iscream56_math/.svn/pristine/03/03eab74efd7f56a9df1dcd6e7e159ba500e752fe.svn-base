                    <button type="button"></button>
                    <button type="button"></button>
                    <button type="button"></button>
                    <button type="button"></button>
                  </div>
                </div>
              </div>
              <div class="input_area">
                <div class="fraction_box"><span>5</span><span>6</span></div>
