.ema515_05_ih_0005 .boolean_wrap {
  justify-content: center;
  flex-wrap: wrap;
  width: 705px;
  height: 478px;
  padding: 76px 0;
  column-gap: 90px;
  background: url(../img/EMA515_05_IH/0005_bg.svg) no-repeat center center;
}
.ema515_05_ih_0005 .boolean_wrap button {
  position: relative;
  aspect-ratio: unset;
  background: none;
  width: 190px;
  height: 92px;
  border-radius: 0;
}
.ema515_05_ih_0005 .boolean_wrap .num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40px;
  height: 40px;
  border: 2px solid #222;
  font-size: 24px;
  border-radius: 100%;
  flex-shrink: 0;
}
.ema515_05_ih_0005 .boolean_wrap button.selected:after,
.ema515_05_ih_0005.completed .boolean_wrap button[data-answer-single='true']:after {
  content: '';
  position: absolute;
  top: 54%;
  left: -31px;
  width: 80px;
  height: 80px;
  margin-top: -54px;
  background: url(../../common_practice/common/img/icon_checked_round.svg) no-repeat center / auto 60px;
}
.ema515_05_ih_0005.completed .boolean_wrap button[data-answer-single='true']:after {
  filter: invert(49%) sepia(100%) saturate(3512%) hue-rotate(345deg) brightness(93%) contrast(101%);
}
.ema515_05_ih_0005 .boolean_wrap button.hint:not([data-answer-single='true'], .selected) {
  border: none;
}
.ema515_05_ih_0005 .boolean_wrap button.selected.correct:after {
  filter: invert(48%) sepia(46%) saturate(7213%) hue-rotate(214deg) brightness(101%) contrast(101%);
}
