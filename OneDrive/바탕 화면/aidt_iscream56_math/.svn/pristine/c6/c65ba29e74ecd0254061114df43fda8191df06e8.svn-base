.title h2[data-head] .fraction_box {
  margin-left: 0;
}
.line_height_1 {
  line-height: 1;
}
.slash {
  position: relative;
}
.slash:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 2px;
  height: 48px;
  background: #e4007f;
}
.slash .slash_txt {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #e4007f;
  font-size: 24px;
}
.fraction_box > span.slash:first-child .slash_txt {
  top: -32px;
}
.fraction_box > span.slash:last-child .slash_txt {
  bottom: -32px;
}

