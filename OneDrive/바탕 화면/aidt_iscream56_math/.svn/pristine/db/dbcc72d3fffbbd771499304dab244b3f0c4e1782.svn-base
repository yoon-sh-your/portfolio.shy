        <section class="contents">
            <div class="flex justify_center">
                <div class="map_area">
                    <img src="../../common_practice/img/EMA511_09_IH/0001_map.png" alt="">
                    <div class="text_group">
                        <span class="txt1" lang="y">출발</span>
