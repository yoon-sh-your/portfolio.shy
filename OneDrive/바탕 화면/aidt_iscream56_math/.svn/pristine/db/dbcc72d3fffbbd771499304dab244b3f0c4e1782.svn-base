                        <image id="obj_move" href="../../common_practice/img/EMA511_09_IH/0001_obj1.png" x="25" y="10" width="90" height="78" />
                        <image id="obj_move_blink" href="../../common_practice/img/EMA511_09_IH/0001_obj1_dashed.png" x="25" y="10" width="90" height="78" />
