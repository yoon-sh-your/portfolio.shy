.nemo {
	display: inline-block;
	width: 32px;
	height: 32px;
	border: 2px solid var(--primary-blue);
	border-radius: 4px;
}

.input_area > span,
.input_area .text_row > span {
	display: inline-block;
	vertical-align: middle;
}
.input_area .text_row + .text_row {
	margin-top: 50px;
}
.text_square_bg {
	display: inline-block;
	vertical-align: middle;
	width: 47px;
	height: 46px;
	background: #d8e9f8;
	text-align: center;
	line-height: 45px;
	font-size: 18px;
	position: absolute;
	top: 0;
	left: 0;
}
.input_area .text_square_bg {
	position: static;
}
.img_area {
	position: relative;
}
.solve_area .text_square_bg {
	position: static;
	vertical-align: middle;
	border: 1px solid var(--font-main);
	position: relative;
	top: -4px;
}
.solve_area .nemo {
	position: relative;
	top: 4px;
	background: #fff;
}

