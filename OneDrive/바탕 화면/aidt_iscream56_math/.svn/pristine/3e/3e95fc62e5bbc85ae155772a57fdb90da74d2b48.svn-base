.ema622_06_su_0004 #toggleBox {
    position: absolute;
    top: 156px;
    left: 122px;
    width: 446px;
    height: 502px;

    cursor: pointer;

    z-index: 5;
}

.ema622_06_su_0004 #toggleBox .box {
    width: 446px;
    height: 502px;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.1s ease;
}

.ema622_06_su_0004 #toggleBox .one,
.ema622_06_su_0004 #toggleBox .two {
    opacity: 0;
    pointer-events: none;
}

.ema622_06_su_0004 #toggleBox .one {
    z-index: 6;
}

.ema622_06_su_0004 #toggleBox .two {
    padding: 0 0 0 47px;
}

.ema622_06_su_0004 #toggleBox.show-one .one {
    opacity: 1;
    pointer-events: auto;

    background-image: url(../common/img/cursor_pointer_large.svg);
    background-repeat: no-repeat;
    background-position: center center;

    width: 446px;
    height: 502px;
}

.ema622_06_su_0004 #toggleBox.show-two .two {
    opacity: 1;
    pointer-events: auto;
}

.ema622_06_su_0004 .letCheck {
    position: absolute;
    top: 156px;
    left: 122px;
    padding-top: 0;
}

.ema622_06_su_0004 .letCheck li {
    width: 446px;
    height: 502px;

    background-color: transparent;
}

.ema622_06_su_0004 .letCheck .cover {
    background-color: transparent;
}

.ema622_06_su_0004 .letCheck .front {
