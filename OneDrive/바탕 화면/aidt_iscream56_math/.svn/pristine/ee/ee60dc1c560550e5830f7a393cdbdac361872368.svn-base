/* ema613_08_SU_0003_s */
.ema613_08_su_0003 {
  .title h2[data-head] {
    span {
      position: relative;

      .calculator {
        position: absolute;
        display: inline-flex;
      }
    }
  }


  .page_1 {
    h3 {
      margin-bottom: 40px;
    }

    .answer1 math-field:not(.textarea) {
      width: 212px;
    }
  }

  .page_2 {
    h3 {
      margin-bottom: 12px;
    }

    .input_wrap {
      math-field.textarea {
        max-height: 161px;
        min-height: unset;
      }
    }
  }

  .page_3 {
    position: relative;

    h3 {
      align-items: center;

      &::before {
        margin-top: 0;
      }

      .ico_round {
        border-color: #3b71fe;
      }
    }

    .ico_round {
      margin: 0 4px 0 7px;
    }

    .boolean_wrap {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 32px;
      width: 1275px;
      margin: auto;

      button {
        min-width: unset;
        width: 404px;
        height: 126px;
        padding: 12px;
        background: url(../img/EMA613_08_SU/0003_img01.png) no-repeat center 0 / 100%;
        justify-content: center;
        position: relative;
        border-radius: 0%;

        &>span {
          font-weight: 700;
          font-size: 32px;
          line-height: 48px;
          letter-spacing: -1px;
        }
      }

      button.selected {
        border: none;

        &:after {
          content: '';
          border: 6px solid #3b71fe;
          background-color: rgb(59 113 254 / 30%);
          border-radius: 50%;
          position: absolute;
          top: 50%;
          left: 50%;
          height: 110px;
          width: 110px;
          transform: translate(-50%, -50%);
        }
      }

      button.hint {
        background-color: rgba(255, 0, 0, 0.5);
        border: none;
      }

      button.hint.selected {
        background-color: transparent;
        border: 4px solid var(--font-main);
      }

      &.result button.selected[data-correction='true'] {
        /* background-color: rgba(59, 113, 254, 0.5); */
        border: none;
      }
    }


    .input_wrap math-field.textarea {
      height: 250px;
    }

    .balloon_wrap {
      position: absolute;
      top: 220px;
      left: 1245px;
      width: 207px;
      height: 227px;
      text-align: center;
      font-size: 24px;
      background: url(../img/EMA613_08_SU/0003_img02.png) no-repeat center 0 / 100%;
    }
  }

  .page_4 {
    .input_wrap .text_hint {
      top: auto !important;
      bottom: calc(100% - 1px);
    }

    h3+.flex {
      width: 1208px;
      margin: auto;
    }

    .answer1 math-field:not(.textarea) {
      width: 212px;
    }

    .input_wrap {
      width: 100%;
      max-width: unset;
      margin: auto;
      align-items: center;

      math-field.textarea {
        height: 250px;
      }
    }
  }

  &[data-current-page='page_2'] .contents>div.flex,
  &[data-current-page='page_3'] .contents>div.flex,
  &[data-current-page='page_4'] .contents>div.flex,
  &[data-current-page='page_2'] .btn_area .btnCheck,
  &[data-current-page='page_1'] .btn_area .btnSample,
  &[data-current-page='page_1'] .btn_area .btnSubmit,
  &[data-current-page='page_2'] .btn_area .btnSample,
  &[data-current-page='page_3'] .btn_area .btnSample,
  &[data-current-page='page_3'] .btn_area .btnType,
  &[data-current-page='page_3'] .btn_area .btnSubmit,
  &[data-current-page='page_4'] .btn_area .btnCheck,
  &[data-current-page='page_4'] .btn_area .btnSample {
    display: none;
  }

  &[data-current-page='page_1'] .calculator,
  &[data-current-page='page_2'] .calculator,
  &[data-current-page='page_3'] .calculator {
    display: none !important;
  }

  .page_4 .question_box+.question_box {
    margin-top: 72px;
  }
}

/*ema613_08_su_0004_s*/
.ema613_08_su_0004 {
  section.title.type2+section.contents {
    padding-top: 0;
  }

  .input_wrap [disabled]+.text_hint {
    opacity: 1;
    pointer-events: all;
  }

  & .boolean_wrap {
    button {
      width: 32px;
      height: 32px;
      padding: 0;
      border: 2px solid var(--primary-blue);
      border-radius: 4px;

      span {
        display: none;
      }

      &.selected span {
        display: block;
      }
    }
  }

  &.completed {
    .boolean_wrap {
      & button[data-answer-single="true"] span {
        display: block;
        color: var(--font-negative);
      }
    }

    .tag_2 {
      &:before {
        opacity: 1;
      }
    }
  }


  .tag_1 {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 49px;
    height: 36px;
    background: url(../../common_contents/img/EMA613_08_SU/0004_tag01.png) no-repeat bottom center / 100%;
    font-size: 24px;
    color: #fff;
    margin-right: 20px;
  }

  .tag_2 {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90px;
    height: 36px;
    background: url(../../common_contents/img/EMA613_08_SU/0004_tag02.png) no-repeat bottom center / 100%;
    font-size: 24px;
    color: #fff;
    margin-right: 20px;


    &:before {
      content: '예';
      display: inline-flex;
      width: 44px;
      height: 44px;
      background-color: #3b71fe;
      border-radius: 12px;
      color: #fff;
      font-size: 27px;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      opacity: 0;
      position: absolute;
      left: -62px;
      bottom: 0;
    }
  }

  .arr {
    display: inline-flex;
    width: 33px;
    height: 31px;
    background: url(../../common_contents/img/EMA613_08_SU/0004_img02.png) no-repeat bottom center / 100%;
  }

  .mr-8 {
    margin-right: 8px;
  }

  .hint {
    font-size: 24px;
    font-weight: 700;
    color: #ff0000;
  }

  .flex {
    display: flex;
    justify-content: center;
    flex-direction: row;
    align-items: start;
    position: relative;
    width: 1286px;
    height: 535px;
    margin: auto;
    background: url(../../common_contents/img/EMA613_08_SU/0004_img01.png) no-repeat bottom center / 100%;
    gap: 0px 100px;
    flex-wrap: wrap;
    padding-left: 90px;
    padding-top: 42px;

    &>.input_area {
      display: flex;
      flex-direction: column;
      gap: 5px;
      /* width: 596px; */
      height: 218px;


      .items {
        display: flex;
        align-items: center;
        gap: 20px;

        &:nth-child(1) {
          .tag_1 {
            margin-right: 0;
          }
        }

        &:nth-child(2) {
          margin-bottom: 30px;
        }

        &:nth-child(3) {
          .question_box {
            .tag_1 {
              margin-right: 8px;
            }
          }
        }
      }
    }

    .question_box {
      font-size: 32px;
    }

    .input_wrap {
      min-width: auto;

      math-field:not(.textarea) {
        width: 80px;
      }
    }
  }
}

.ema613_08_su_0004[data-current-page='page_1'] .btn_area .btnSubmit,
.ema613_08_su_0004[data-current-page='page_2'] .btn_area .btnSubmit,
.ema613_08_su_0004[data-current-page='page_3'] .btn_area .btnSubmit,
.ema613_08_su_0004[data-current-page='page_4'] .btn_area .btnCheck {
  display: none;
}

/*EMA613_08_SU_0005_s*/
.ema613_08_su_0005 {
  section.title.type2+section.contents {
    padding-top: 0;
  }

  .custom_select {
    width: 167px;
  }

  .hint_area {
    color: #FF0000;
    white-space: nowrap;
    opacity: 0;
  }

  &:has(.example_box.on) {
    .hint_area {
      opacity: 1;
    }

    .boolean_wrap {
      & button[data-answer-single="true"] span {
        display: block;
      }
    }
  }



  .scroll_wrap {
    position: relative;
    overflow-y: scroll;
    height: 519px;
  }

  .inwrap {
    width: 1202px;
    height: 519px;
    background: url(../../common_contents/img/EMA613_08_SU/0005_bg01.png) no-repeat bottom center / 100%;
    display: flex;
    flex-direction: column;
    padding: 100px 0;
    gap: 100px;
    margin: auto;
  }

  .items {
    display: flex;
    align-items: center;
    height: 209px;
    gap: 210px;
    padding-left: 40px;
  }

  .txt_box {
    font-size: 32px;
    letter-spacing: -1px;
    line-height: 48px;
  }

  .items .txt_box:nth-child(1) {
    /* 왼쪽 텍스트 박스 너비를 잡아 오른쪽 텍스트 박스와의 간격을 조정 */
    width: 540px;
  }

  .name {
    position: absolute;
    opacity: 0;
  }

  .input_wrap:has(math-field.textarea) {
    width: 100%;
  }

  .boolean_wrap {
    gap: 2px;

    button {
      width: 32px;
      height: 32px;
      padding: 0;
      border: 2px solid var(--primary-blue);
      border-radius: 4px;
    }

    button span {
      display: none;
    }

    button.selected span {
      display: block;
    }
  }
}

/*ema613_08_SU_0006_s*/
.ema613_08_SU_0006 {

  /* 소수점버튼 */
  .boolean_wrap {
    gap: 2px;

    button {
      width: 32px;
      height: 32px;
      padding: 0;
      border: 2px solid var(--primary-blue);
      border-radius: 4px;

      span {
        display: none;
      }

      &.selected span {
        display: block;
        margin-top: -10px;
      }
    }
  }
  &:has( .example_box.on) {
    & .boolean_wrap {
      button[data-answer-single="true"] span {
          display: block;
          margin-top: -10px;
          /* color: var(--font-negative); */
      }
      button[data-answer-single="false"] span {
          display: none;
          color: var(--font-negative);
      }
  }
  }

  .input_wrap math-field.textarea {
    width: 797px;
    height: 446px;
  }

  .img_box {
    position: relative;
    aspect-ratio: unset;
    width: 654px;
    height: 363px;
    margin-top: 100px;
    background: url(../../common_contents/img/EMA613_08_SU/0006_bg01.png) no-repeat center 1px / 100%;

    &>p {
      text-align: center;
      position: absolute;
      top: 40px;
      left: 16px;
      z-index: 4;
    }

    .name {
      position: absolute;
      top: 98px;
      left: 568px;
      z-index: 4;
      font-size: 18px;
      font-weight: 400;
      color: #fff;
    }
  }

  .square {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: 2px solid #3b71fe;
    background-color: #fff;
    border-radius: 4px;
    margin: -5px 4px;
  }
}