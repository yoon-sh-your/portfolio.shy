    .table_wrap {
        position: relative;
        width: 949px;
        height: 434px;
        margin-left: 100px;
        background: url(../../common_contents/img/EMA613_09_SU/0003_bg.png) no-repeat bottom center;
        font-size: 16px;
        padding-top: 190px;

        table {
            position: absolute;
            z-index: 99;
            bottom: 3px;
            left: 145px;
            width: 634px;

            caption {
                padding-bottom: 12px;
            }

            th {
                font-size: 16px;
                padding: 9px 0;
            }

            td {
                text-align: center;
                font-size: 16px;
                padding: 9px 0;
            }

            tfoot td {
                text-align: right;
            }
        }
    }
}