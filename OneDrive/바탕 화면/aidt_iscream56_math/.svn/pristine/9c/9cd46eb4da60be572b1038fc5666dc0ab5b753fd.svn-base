/* .ema626_01_ih_0002.answered #gridCanvas {
      opacity: 0;
  } */
.ema626_01_ih_0002.answered #lineSelectLayer {
	opacity: 0;
}
#lineSelectLayer {
	display: none;
	position: absolute;
	height: 70px;
	padding: 8px;
	background-color: var(--primary-blue-800);
	white-space: nowrap;
	border-radius: 70px;
}
#lineSelectLayer:after {
	content: "";
	width: 29px;
	height: 15px;
	background: url(../../common_contents/common/img/icon_bubble_tail.svg) no-repeat top center / 100%;
	position: absolute;
	top: -15px;
	left: 50%;
	transform: translateX(-50%);
}
#lineSelectLayer > button {
	display: inline-block;
	width: 52px;
	height: 52px;
	padding: 0;
	background: var(--bg-default);
	background-size: 32px;
	background-repeat: no-repeat;
	background-position: 50%;
	border: 1px solid var(--stroke-default);
	border-radius: 50%;
	vertical-align: top;
	min-width: unset;
}
#lineSelectLayer .to_solid {
	background: #fff url(../../common_practice/img/EMA612_01_IH/icon_solid_line.svg) no-repeat 50% / 30px 30px;
}
#lineSelectLayer .to_dotted {
	background: #fff url(../../common_practice/img/EMA612_01_IH/icon_dashed_line.svg) no-repeat 50% / 30px 30px;
}

