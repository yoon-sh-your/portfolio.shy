.ex_tag {
  width: 52px;
  height: 32px;
  background-color: rgba(255, 255, 255, 1);
  border: 2px solid rgba(238, 79, 36, 1);
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
