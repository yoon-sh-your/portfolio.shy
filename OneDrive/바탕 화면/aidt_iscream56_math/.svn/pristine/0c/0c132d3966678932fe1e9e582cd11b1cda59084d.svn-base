  background: url(../../common_contents/img/EMA521_05_SU/0003_bg_content_01.png) no-repeat left top / 100%;
}
.ema521_05_su_0003 .page_1 .talk_txt > p {
  top: 95px;
  left: 100px;
}
.ema521_05_su_0003 .page_2 .talk_txt {
  background: url(../../common_contents/img/EMA521_05_SU/0003_bg_content_02.png) no-repeat left top / 100%;
}
.ema521_05_su_0003 .page_2 .talk_txt > p {
  top: 93px;
  left: 250px;
} 

.ema521_05_su_0003 .btnSubmit {
  display: none;
}
.ema521_05_su_0003[data-current-page='page_3'] .btnCheck {
  display: none;
}
.ema521_05_su_0003[data-current-page='page_3'] .btnSubmit {
  display: block;
}
.ema521_05_su_0003[data-current-page='page_4'] .btnType,
