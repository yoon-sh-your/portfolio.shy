/* 약속해볼까요 */
.summarize {
  align-items: center;
}
.summarize label {
  height: 68px;
  padding: 16px;
  background-color: #ffde6a;
  border-radius: 40px;
  font-size: 24px;
  font-weight: 700;
  color: #a55935;
  /* line-height: 36px; */
  position: absolute;
  top: -34px;
  left: 34px;
}
.summarize_wrap .summarize {
  width: 1280px;
  height: 528px;
  border: 4px solid #ffde6a;
  border-radius: 20px;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.summarize > div {
  font-size: 32px;
  color: #000;
  font-weight: 700
}
.summarize > div  .reveal_btn {
  margin-left: 8px;
}
.summarize > div.phrase {
	gap: 0;
}



/* EMA521_05_SU_0002_s */
.ema521_05_su_0002 .contents > .flex .video_wrap {
  background: url(../../common_contents/img/EMA521_05_SU/0002_contents.png) no-repeat -10px -10px;
  background-size: 110%;
}


/* EMA521_05_SU_0003_s */
.talk_box {
  display: flex;
  gap: 26px;
  align-items: flex-start;
  justify-content: center;
}
.talk_txt {
  position: relative;
  width: 660px;
  min-height: 305px;
} 
.talk_txt > p {
  position: absolute;
  color: #000;
  text-align: center;
  font-size: 32px;
  font-weight: 700;
} 
.develope_box {
  width: calc(100% - 716px);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.develope_box .input_area {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8px;
}
.develope_box .input_area .input_wrap math-field:not(.textarea) {
  width: 150px;
}
.develope_box_full {
  display: flex;
  justify-content: center;
}
.develope_box_full .input_wrap {
  width: 1208px;
}
.develope_box_full .input_wrap math-field.textarea {
  width: 100%;
} 

.summarize > .check_up {
  margin-top: 30px;
  align-items: center;
  justify-content: center;
  gap: 100px;
}
.summarize > .check_up > div {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
}
.summarize > .check_up .right_range::before {
  content:"";
  position: absolute;
  left: -50px;
  top: 10%;
  width: 2px;
  height: 80%;
  background-color: #9E9E9E;
}
.summarize > .check_up .reveal_btn.num_txt:not(:disabled):after {
  bottom: 20px;
}
