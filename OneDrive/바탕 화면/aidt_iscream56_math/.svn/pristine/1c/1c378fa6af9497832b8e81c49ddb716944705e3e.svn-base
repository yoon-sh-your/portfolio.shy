/* ----------------------------------- 접근성 ---------------------------------- */

.a11y-hidden {
  overflow: hidden;
  position: absolute;
  border: 0;
  width: 1px;
  height: 1px;
  clip: rect(1px, 1px, 1px, 1px);
}

/* --------------------------------- 인트로, 아웃트로 페이지 -------------------------------- */
.intro {
  .title-intro {
    display: flex;
    gap: 10px;
    .group {
      span {
        font-family: "Pretendard";
        font-size: 24px;
        font-weight: 600;
        letter-spacing: -2px;
      }
      .bluegreen {
        font-size: 32px;
        color: #04646b;
      }
      .brown {
        color: #b04425;
      }
    }
  }
}
.intro,
.outro {
  width: 100%;
  height: 100%;
  padding: 40px 55px 40px 70px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}
.intro::before {
  position: absolute;
  top: 122px;
  left: 198px;
  z-index: 10;
  content: "";
  width: 200px;
  height: 90px;
  background: url("../common/img/bg_intro_cloud1.svg") no-repeat center / 100%;
}
.intro::after {
  position: absolute;
  bottom: 112.18px;
  left: 578px;
  z-index: 10;
  content: "";
  width: 193.24px;
  height: 79.82px;
  background: url("../common/img/bg_intro_cloud2.svg") no-repeat center / 100%;
}
.intro,
.outro {
  .inwrap {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 56px;
    width: 100%;
    height: 100%;
    padding-top: 170px;
    padding-left: 130px;
    border-radius: 12px;
    position: relative;
  }
}
.intro {
  .inwrap {
    position: relative;
    background-color: #ffe693;
    .title-intro {
      position: absolute;
      top: 100px;
      left: 155px;
      z-index: 10;
    }
    &::before {
      content: "";
      width: 100px;
      height: 524px;
      background: url("../common/img/bg_intro_string.svg") no-repeat center /
        100%;
      position: absolute;
      top: 50%;
      left: -35px;
      transform: translateY(-50%);
    }
    &::after {
      content: "";
      display: block;
      width: 411.3px;
      height: 531.01px;
      background: url("../common/img/charactor_math_cloud.svg") no-repeat center /
        100%;
      position: absolute;
      bottom: -110px;
      right: 50px;
      z-index: 20;
    }
  }
}

.outro {
  .inwrap {
    background-color: #f7dad5;
    .context {
      & > label {
        margin-bottom: 16px;
        padding: 8px 20px;
        display: inline-flex;
        min-height: initial;
        border-radius: 12px;
        background: var(--Color-Secondary-Red, #ee4f24);
        color: var(--bg-disabled);
        font-size: 20px;
        line-height: 32px;
        letter-spacing: -0.5px;
        font-weight: 700;
        align-items: center;
      }
    }

    &::before {
      content: "";
      width: 100px;
      height: 524px;
      background: url("../common/img/bg_outro_string.svg") no-repeat center /
        100%;
      position: absolute;
      top: 50%;
      left: -35px;
      transform: translateY(-50%);
    }
    &::after {
      content: "";
      display: block;
      width: 480px;
      height: 480px;
      background: url("../common/img/charactor_math_02.svg") no-repeat center /
        100%;
      position: absolute;
      bottom: -136px;
      right: -15px;
      z-index: 20;
    }
  }
}
.intro,
.outro {
  .page {
    display: flex;
    align-items: center;
    gap: 24px;
    position: absolute;
    top: 32px;
    right: 32px;
    & > div {
      display: inline-flex;
      align-items: center;
      height: 40px;
      padding-left: 52px;
      font-size: 20px;
      /* line-height: 32px; */
      position: relative;
      &::before {
        content: "";
        display: block;
        width: 40px;
        height: 40px;
        background: url("../common/img/icon_book_3.svg") no-repeat center left /
          40px;
        position: absolute;
        top: 0;
        left: 0;
      }
    }
  }
}

.intro,
.outro {
  .main {
    display: flex;
    flex-direction: column;
    gap: 16px;
    letter-spacing: -1px;
    p,
    ul > li {
      font-size: 32px;
      line-height: 48px;
    }
    p:first-child {
      font-size: 64px;
      font-weight: 700;
      line-height: 88px;
    }
  }
}
.intro {
  ul {
    margin-top: 10px;
    margin-left: 50px;
    display: grid;
    grid-template-columns: repeat(2, min-content);
    white-space: nowrap;
    li {
      padding-right: 10px;
      &:nth-of-type(1) {
        padding-right: 60px;
      }
      &:nth-of-type(2) {
        padding-right: 150px;
      }
    }
    li:nth-child(odd) {
      position: relative;
      /* display: block;
          width: min-content;
          height: 72px; */
      z-index: 10;
      &::before {
        content: "";
        display: block;
        width: 152.02px;
        height: 72px;
        background: url("../common/img/bg_intro_tag.svg") no-repeat center/
          contain;
        position: absolute;
        top: -10px;
        left: -50px;
        z-index: -1;
      }
    }
    li:nth-child(even) {
    }
  }
}

/* ------------------------------ 준비하기, 놀이방법 공통 ----------------------------- */

.play-howto-layout,
.play-ready-layout {
  h2 {
    position: relative;
    margin-left: 20px;
    font-family: "Pretendard" !important;
    font-size: 32px;
    font-weight: 700 !important;
    letter-spacing: -1px;
    line-height: 48px;
    .title-play,
    .title-ready {
      text-shadow: 2px 2px 0 white, 1px 2px 0 white, 2px 1px 0 white,
        1px 1px 0 white, 0 2px 0 white, 0 1px 0 white, 2px 0 0 white,
        1px 0 0 white;
    }

    &::before {
      content: "";
      display: block;
      width: 70px;
      height: 70px;
      /* border:1px solid red; */
      background: white url("../common/img/title_mid_6.svg") no-repeat center/
        contain;
      position: absolute;
      top: -10px;
      left: -20px;
      z-index: -1;
    }
    .point {
      color: #00646b;
    }
  }
}
/* -------------------------------- 준비하기 페이지 -------------------------------- */

.play-ready-layout {
  & > section.title {
    margin-bottom: 30px;
  }
  .contents {
    .dp_grid {
      grid-template-columns: 1fr 1fr;
      gap: 55px;
      li {
        justify-self: start;
        vertical-align: top;
        p {
          position: relative;
          margin-top: 20px;
          padding-left: 60px;
          font-size: 24px;
          line-height: 36px;
          letter-spacing: -0.5px;
          &::before {
            content: "";
            display: block;
            width: 32px;
            height: 33px;
            position: absolute;
            top: 0;
            left: 20px;
          }
        }
        &:nth-of-type(1) {
          p {
            &::before {
              background: url("../common/img/icon_ready_num_1.svg") no-repeat
                center/ contain;
            }
          }
        }
        &:nth-of-type(2) {
          p {
            &::before {
              background: url("../common/img/icon_ready_num_2.svg") no-repeat
                center/ contain;
            }
          }
        }
      }
    }
    .page_2.on {
      li {
        &:nth-of-type(1) {
          p {
            &::before {
              background: url("../common/img/icon_ready_num_3.svg") no-repeat
                center/ contain;
            }
          }
        }
        &:nth-of-type(2) {
          p {
            &::before {
              background: url("../common/img/icon_ready_num_4.svg") no-repeat
                center/ contain;
            }
          }
        }
      }
    }
  }
  &.ema516_09_su_0002 {
    img {
      padding: 0 370px;
    }
    p {
      margin-top: 20px;
      font-size: 24px;
      line-height: 36px;
      text-align: center;
      letter-spacing: -0.5px;
    }
  }
  &.ema521_10_su_0002 {
    .btn_area {
      display: none;
    }
  }
  &.ema515_09_su_0002 {
    &[data-current-page="page_1"] {
      .paging_layout {
        padding: 0 95px;
      }
      .dp_grid {
        gap: 0;
        li:last-child {
          p {
            letter-spacing: -1px;
            padding-left: 40px;
            &::before {
              left: 0;
            }
          }
        }
      }
    }
    &[data-current-page="page_2"] {
      h2 {
        display: none;
      }
    }
  }

  &.ema615_10_su_0002 {
    .tag {
      font-size: 20px;
      font-weight: 700;
      padding: 0 10px 0 25px;
      position: relative;
      height: 8px;
      &::before {
        position: absolute;
        z-index: -1;
        left: 0;
        content: "";
        width: 106px;
        height: 38px;
        background: url("../../common_contents/img/EMA615_10_SU/0002_icon.svg")
          no-repeat center/ contain;
      }
    }
  }
  .example {
    position: relative;
    color: white;
    font-size: 20px;
    padding: 10px 13px 10px 10px;
    /* margin: 10px 10px 0 0; */
    &::before {
      position: absolute;
      top: 5px;
      left: 3px;
      z-index: -1;
      content: "";
      /* margin: -30px; */
      background-color: #888;
      color: white;
      border-radius: 50%;
      width: 33px;
      height: 33px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      align-content: center;
    }
  }
}
.shoot {
  /* margin: 0 5px; */
  padding: 1px 10px 3px 10px;
  font-size: 24px;
  border: 2px solid #a2562a;
  vertical-align: top;
  border-radius: 12px;
  color: #5fd1fd;
  font-weight: 600;
  background-color: #98cf8e;
  text-shadow: 2px 2px 0 #5b6f8b, 1px 2px 0 #5b6f8b, 2px 1px 0 #5b6f8b,
