        border: none;
        background: none;
        width: 158px;
        height: 90px;
      }

      .reveal_btn::before {
        width: auto;
        height: auto;
        top: 10px;
        left: 0;
        right: 0;
        bottom: 20px;
      }

      .reveal_btn:not(:disabled):after {
        bottom: 10px;
      }

      .reveal_btn span {
        position: absolute;
        overflow: hidden;
        width: 0;
        height: 0;
      }
    }
