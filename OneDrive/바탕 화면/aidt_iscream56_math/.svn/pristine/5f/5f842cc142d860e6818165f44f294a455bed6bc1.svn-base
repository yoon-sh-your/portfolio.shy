/* ema613_06_SU_0003_s */
.ema613_06_su_0003 {
  .page_1 {
    h3 {
      margin-bottom: 40px;
    }

    .answer1 math-field:not(.textarea) {
      width: 212px;
    }
  }

  .page_2 {
    .input_wrap {
      math-field.textarea {
        max-height: 154px;
        min-height: auto;
      }
    }
  }

  .page_3 {
    .info {
      position: absolute;
      top: -10px;
      left: 70px;
      background: url(../img/EMA613_06_SU/0003_img04.png) no-repeat right center;
      font-size: 24px;
      padding-right: 40px;
    }

    .container_boolean {
      position: relative;
      background: url(../img/EMA613_06_SU/0003_img01.png) no-repeat center 0;

      .balloon_txt {
        position: absolute;
        top: 10px;
        right: -230px;
        width: 309px;
        height: 191px;
        background: url(../img/EMA613_06_SU/0003_img02.png) no-repeat center 0;
        font-size: 23px;
        padding: 17px 110px 10px 20px;
        text-align: center;
        white-space: normal;
      }

      .row_boolean {
        display: flex;
        gap: 100px;
        margin-top: 224px;
      }

      /* 분수 문장 */
      .fraction-text-align {
        display: flex;
        align-items: center;
        font-weight: 700;
      }

      .fraction-text-align>.f32b {
        padding: 0px 8px;
      }

      .fraction-text-column {
        display: flex;
        flex-direction: column;
      }

      .fraction-text-column .fraction-text-align:nth-child(1) {
        margin-top: -4px;
      }

      .fraction-text-column .fraction-text-align:nth-child(2) {
        margin-top: -10px;
      }

      /* 분수 - 예시 답안 */
      .fraction_container .fraction-text-column {
        /* gap: 12px; */
        font-size: 24px;
        color: var(--primary-blue-800);
      }

      .fraction_container .fraction_box::before {
        background-color: #1454b9;
      }

      .fraction_container .f32b {
        font-size: unset;
      }

      .fraction_container .fraction-text-column .fraction-text-align:nth-child(1) {
        margin-top: -4px;
      }

      .fraction_container .fraction-text-column .fraction-text-align:nth-child(2) {
        margin-top: -4px;
      }

      .fraction_container .fraction-text-column .fraction-text-align:nth-child(3) {
        margin-top: 12px;
      }

      /* 분수 타이틀 */
      .fraction_title .title_head {
        margin-top: 30px !important;
      }

      .fraction_title h2[data-text="생각 깨우기"] {
        margin-top: -28px !important;
      }

      .fraction_title h2[data-text="생각 깨우기"] .fraction-text-column {
        margin-top: unset;
      }

      .fraction_title .fraction-text-column {
        margin-top: -28px;
      }

      /* 분수 - whole */
      .f32b {
        display: flex;
        align-items: center;
        gap: 4px;
      }

      /* 분수 - 연산 */
      .operations {
        display: flex;
        align-items: center;
        font-size: 32px;
        font-weight: 700;
        gap: 4px;
      }

      /* 분수 - 인풋 사이즈 */
      .input_wrap {
        align-items: center;
        min-width: 80px;
      }

      .input_wrap math-field:not(.textarea) {
        width: 80px;
        height: 60px;
      }

      /* 분수 색칠 */
      .count_row {
        display: flex;
        flex-direction: column;
      }

      .count_row .nums {
        font-size: 32px;
        display: flex;
        justify-content: space-between;
      }

      .boolean-counts {
        display: flex;
        gap: 20px;
        border: 2px solid #e60012;
        padding: 16px;
        border-radius: 16px;
      }

      /* 색칠 - 그리드 */
      .boolean_count_wrap.grid_boolean {
        display: grid;
        gap: 0;
      }

      .boolean_count_wrap.grid_boolean.c10r10 {
        grid-template-columns: repeat(10, 1fr);
        /* 가로 4칸 */
        grid-template-rows: repeat(3, 1fr);
        /* 세로 3칸 */
        border-color: #00a0e9;
      }

      .boolean_count_wrap.grid_boolean.c5r3 {
        grid-template-columns: repeat(5, 1fr);
        /* 가로 4칸 */
        grid-template-rows: repeat(3, 1fr);
        /* 세로 3칸 */
      }

      .boolean_count_wrap.grid_boolean button {
        border: 1px solid #00a0e9;
        border-image-source: repeating-linear-gradient(45deg,
            #00a0e9 0,
            #00a0e9 0,
            white 1px,
            white 1px);
        border-image-slice: 1;
        min-width: auto;
        width: 16px;
        height: 16px;
      }

      .boolean_count_wrap.grid_boolean button:not(:first-child)::before {
        display: none;
      }
    }
  }

  .page_4 {
    .question_box {
      &+.question_box {
        margin-top: 72px;
      }
    }

    .input_area h3 {
      margin-bottom: 40px;
      letter-spacing: -1px;
    }
  }

  &[data-current-page="page_2"] .contents>div.flex,
  &[data-current-page="page_3"] .contents>div.flex,
  &[data-current-page="page_4"] .contents>div.flex,
  &[data-current-page="page_2"] .btn_area .btnCheck,
  &[data-current-page="page_1"] .btn_area .btnSample,
  &[data-current-page="page_1"] .btn_area .btnSubmit,
  &[data-current-page="page_2"] .btn_area .btnSample,
  &[data-current-page="page_3"] .btn_area .btnSample,
  &[data-current-page="page_3"] .btn_area .btnType,
  &[data-current-page="page_3"] .btn_area .btnSubmit,
  &[data-current-page="page_4"] .btn_area .btnSubmit,
  &[data-current-page="page_4"] .btn_area .btnSample {
    display: none;
  }
}

