              <div class="fraction_box">
                <span>1</span>
                <span>4 </span>
              </div>
            </div>
            <div class="boolean_col col2">
              <div class="boolean_count_wrap" data-answer-single="3">
                <button></button>
                <button></button>
                <button></button>
                <button></button>
                <button></button>
                <button></button>
