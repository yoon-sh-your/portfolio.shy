}

h3.title:before {
  margin-top: 2px;
}
.fraction_box_wrap {
  display: inline-flex;
  align-items: center;
  gap: 4px;
}
.fraction_box_wrap .fraction_box {
  min-width: 0;
}
.label_bogi {
  width: 52px;
  height: 32px;
  border: 2px solid var(--secondary-red);
  border-radius: 4px;
  background: #fff;
  color: var(--secondary-red);
  z-index: 1;
}
.slash {
  position: relative;
}
.slash:after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  width: 2px;
  height: 48px;
  background: #e4007f;
}
.slash .slash_txt {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: #e4007f;
  font-size: 24px;
}
.fraction_box > span.slash:first-child .slash_txt {
  top: -32px;
}
.fraction_box > span.slash:last-child .slash_txt {
  bottom: -32px;
}

