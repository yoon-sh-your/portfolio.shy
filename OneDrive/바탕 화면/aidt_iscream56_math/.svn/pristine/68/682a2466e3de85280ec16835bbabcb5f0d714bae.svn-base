.solve_area .bracket,
.solve_area .fraction_box {
  vertical-align: middle;
}
.solve_area .bracket {
  display: inline-flex;
  align-items: flex-end;
  gap: 10px;
}

.fraction_box.pos_custom > .input_wrap + span {
  transform: translateY(-20px);
}
.input_wrap.fraction_wrap,
.input_wrap.fraction_wrap math-field,
.fraction_box .input_wrap,
