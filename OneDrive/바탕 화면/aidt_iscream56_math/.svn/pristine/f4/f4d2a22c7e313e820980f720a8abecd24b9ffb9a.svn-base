/* ema621_01_su_0001 */

.ema621_01_su_0001#app_wrap {
    background: url(../img/EMA621_01_SU/0001_bg.png) no-repeat left 102% / 824px, #5CC2EE;
}

.ema621_01_su_0001 .text_box {
    color: var(--primary-blue-800);
    top: 200px;
    left: 282px;
}

.ema621_01_su_0001 .input_area label.img {
    background-color: #3B71FE;
}

.ema621_01_su_0001 .input_area label::after {
    background-color: #3B71FE;
}

.ema621_01_su_0001 .fraction_row {
    display: flex;
    align-items: center;
}

/* .ema621_01_su_0002 */
.ema621_01_su_0002 .btn_area>button.btnReset.reset_off.active {
    pointer-events: none;
    background-color: var(--btn-disabled-bg);
    border-color: var(--stroke-default);
    background-image: url(../../common_contents/common/img/icon_reset_disabled.svg);
  }
  .ema621_01_su_0002 .btn_area>button.btnReset.reset_on {
    pointer-events: all;
    background-color: var(--btn-default);
    border-color: transparent;
    background-image: url(../../common_contents/common/img/icon_reset_white.svg);
  }

  /* .ema621_01_su_0003 */
  .ema621_01_su_0003 .letCheck li:first-child .back {
    display: flex;
    align-items: center;
    gap: 24px;
  }
.ema621_01_su_0003 .letCheck li:first-child .back  .fraction_row {
    display: flex;
    align-items: center;
    gap: 8px;
    position: relative;
}
.ema621_01_su_0003 .letCheck li .back .arr:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50px, -42px);
    width: 14px;
    height: 112px;
    background: url(../img/EMA621_01_SU/0003_bg1.svg) no-repeat 0 0;
}
.ema621_01_su_0003 .letCheck li .back .arr:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(40px, -42px);
    width: 14px;
    height: 112px;
    background: url(../img/EMA621_01_SU/0003_bg2.svg) no-repeat 0 0;
}
.ema621_01_su_0003 .letCheck li:first-child .back  .arr:nth-of-type(2):before {
    transform: translate(-63px, -42px);
}
.ema621_01_su_0003 .letCheck li:first-child .back  .arr:nth-of-type(2):after {
    transform: translate(53px, -42px);
}

.ema621_01_su_0003 .letCheck li:last-child .back {
    gap: 20px;
}
.ema621_01_su_0003 .letCheck li:last-child .back .fraction_row.arr::before {
    left: 50%;
    transform: translate(40px, -42px);
}
.ema621_01_su_0003 .letCheck li:last-child .back .fraction_row.arr::after {
    left: 50%;
    transform: translate(98px, -42px);
}
.ema621_01_su_0003 .letCheck  .fraction_row {
    display: flex;
    align-items: center;
}

