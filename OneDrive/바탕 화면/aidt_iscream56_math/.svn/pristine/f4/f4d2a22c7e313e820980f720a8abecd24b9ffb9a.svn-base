/* 공통 이미지 컨테이너 스타일 */
.video_wrap,
.picture_wrap {
  margin: 0 auto; /* 좌우 중앙 정렬 */
  position: relative;
  width: 600px;
  height: 428px;
  overflow: hidden;
}

/* 이미지 크기 및 위치 통일 */
.video_wrap img,
.picture_wrap img {
  width: 100%;
  height: 100%;
  object-fit: contain; /* 비율 유지하며 영역에 맞춤 */
  display: block;
  position: relative;
  top: 0;
  left: 0;
  transform: none;
}

/* 이미지와 입력 영역 flex 정렬 및 간격 통일 */
.contents > .flex {
  display: flex;
  gap: 26px;
  align-items: flex-start;
}

/* 입력 영역 너비 통일 */
.input_wrap {
  width: 797px;
  max-width: 100%;
}

.input_wrap > math-field.textarea {
  width: 100%;
  height: 250px;
}