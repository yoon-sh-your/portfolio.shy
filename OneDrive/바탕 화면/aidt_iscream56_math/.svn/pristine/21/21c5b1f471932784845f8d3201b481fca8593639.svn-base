  flex-direction: column;
  gap: 20px;
}
.ema621_03_su_0004 .row1 {
  display: flex;
  align-items: center;
  position: relative;
}
.ema621_03_su_0004 .row1 [class^="num"] {
  position: absolute;
}
.ema621_03_su_0004 .row1 .num1 {
  bottom: 0;
  left: 0; 
}
.ema621_03_su_0004 .row1 .num2 {
  top: -70px;
  right: calc(100% - 140px); 
}
.ema621_03_su_0004 .row1 .num3 {
  top: -70px;
  right: calc(100% - 320px); 
}
.ema621_03_su_0004 .row1 .num4 {
  bottom: 0;
  right: 45px; 
}

.ema621_03_su_0004 .row1 span {
  font-size: 24px;
}

.ema621_03_su_0004 .row2 {
  display: flex;
  align-items: center;
  gap: 8px;
}

.ema621_03_su_0004 .page_2 .speech_bubble {
  background: url(../img/EMA621_03_SU/0004_bg3.png) no-repeat 0 0;
  background-size: contain;
  height: 214px;
  width: 232px;
  position: absolute;
  bottom: 50px;
  right: 178px;
}
.ema621_03_su_0004 .page_2 .speech_bubble .bubble_txt {
  position: absolute;
  top: -44px;
  left: 34px;
  font-size: 20px;
  line-height: 32px;
  text-align: center;
}

.ema621_03_su_0004 .page_4 .row2 {
  gap: 0;
}
.ema621_03_su_0004 .page_4 [class^="col"] {
  position: relative;
  display: flex;
  align-items: center;
  gap: 0;
}
.ema621_03_su_0004 .page_4 .col1:before {
  content: '';
  position: absolute;
  top:-26px;
  left:-7px;
  display: flex;
  align-items: center;
  background: url(../img/EMA621_02_SU/0004_bg1.png) no-repeat 0 0;
  height: 112px;
  width: 87px;
  z-index: -1;
}
.ema621_03_su_0004 .page_4 .col2 {
  display: flex;
  align-items: center;
  background: url(../img/EMA621_02_SU/0004_bg2.png) no-repeat 0 6px;
  height: 116px;
  padding: 0 21px;
  align-items: center;
  background-size: contain;
}
.ema621_03_su_0004 .page_4 .col2 .input_wrap math-field {
  width: 80px;
}

/* ema621_03_su_0005 */
.ema621_03_su_0005 .question_box {
  flex-wrap: wrap;
  gap: 120px 350px;
}
.ema621_03_su_0005 .col {
  display: flex;
  align-items: center;
  width: 360px;
}
.ema621_03_su_0005 .col:nth-child(1) .input_wrap math-field,
.ema621_03_su_0005 .col:nth-child(2) .input_wrap math-field {
  width: 80px;
}
.ema621_03_su_0005 .col:nth-child(3) .input_wrap math-field,
.ema621_03_su_0005 .col:nth-child(4) .input_wrap math-field {
  width: 247px;
  height: 112px;
}

/* .ema621_03_su_0006 */
.ema621_03_su_0006 .empty_box {
  width: 32px;
  height: 32px;
  padding: 0;
  border-radius: 4px;

}
.ema621_03_su_0006 .question_box {
  flex-direction: column;
}
.ema621_03_su_0006 .drag_share {
  display: flex;
  justify-content: center;
  width: 910px;
  background: url(../../common_contents/img/EMA621_03_SU/0006_bg.png) no-repeat center;
}
.ema621_03_su_0006 .draggable_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  flex-shrink: 0;
  gap: 20px;
  width: 656px;
  height: 208px;
  padding: 10px 50px;

}
.ema621_03_su_0006 .draggable {
  display: flex;
  width: 80px;
  height: 114px;
  cursor: grab;
}
.ema621_03_su_0006 .draggable.used {
  opacity: 0.6;
  pointer-events: none;
}

.ema621_03_su_0006 .draggable::after {
  /*드래그영역 클릭 가능영역 확장용*/
  content: '';
  width: 100px;
  height: 108px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.ema621_03_su_0006 .drag_group_box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400px;
  padding: 0 50px;
  height: 210px;
}
.ema621_03_su_0006 .drag_group_box .fraction_box:nth-of-type(2):before {
  top: calc(50% - -15px);
}

.ema621_03_su_0006 .droppable {
  width: 80px;
  /* height: 105px; */
  height: 60px;
  border: 1px solid #3b71fe;
  border-radius: 12px;
}
.ema621_03_su_0006 .droppable img {
  position: absolute; 
  bottom: 31px;
}
.ema621_03_su_0006 .droppable.ui-state-hover {
  height: 105px;
}
.ema621_03_su_0006 .droppable span {
  width: 80px;
  height: 60px;
  border: 1px solid #3b71fe;
  border-radius: 12px;
}
.ema621_03_su_0006 .single_draggable.used {
  opacity: 0.4;
  pointer-events: none;
}
.ema621_03_su_0006 .drag_group_box span {
  font-size: 32px;
  letter-spacing: -1px;
  font-weight: 700;
}

.ema621_03_su_0006 .btn_area {
  display: flex;
  left: 40px;
}
.ema621_03_su_0006 .btn_area > button.btnDraw {
  position: absolute;
  left: 0;
  width: 64px;
  min-width: unset;
  height: 64px;
  border-radius: 16px;
  border-radius: 16px;
  border: 1px solid var(--Line-Gray-300, #D2D2D2);
  background-color: var(--black-white-white, #FFF);
  box-shadow: 0px 8px 24px 0px rgba(0, 0, 0, 0.12);
  background-position: center;
  background-repeat: no-repeat;
  background-size: 40px;
  font-size: 0;
  background-image:url(../../common_contents/common/img/icon_drawline.svg);
}
.ema621_03_su_0006 .btn_area > button.btnDraw.active {
  background-color: #fff;
}

.ema621_03_su_0006 .row {
  display: flex;
  gap: 40px;
  align-items: center;
  justify-content: center;
  margin-top: 80px;
}
.ema621_03_su_0006 .row math-field {
  width: 203px;
  height: 113px;
}
