}
.ema621_03_su_0003 .box .txt3 {
  bottom: 0;
  left: 326px;
}
.ema621_03_su_0003 .box .txt4 {
  bottom: 0;
  left: 814px;
}
.ema621_03_su_0003 .boolean_count_wrap {
  position: absolute;
  right: 55px;
  top: 58px;
  border: 0;
}
.ema621_03_su_0003 .boolean_count_wrap button {
