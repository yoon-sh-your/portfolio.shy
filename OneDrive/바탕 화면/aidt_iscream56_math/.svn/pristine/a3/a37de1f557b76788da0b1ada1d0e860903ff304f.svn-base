/* ema625_04_ih_0005 */
.ema625_04_ih_0005 .text_area {
	position: absolute;
	top: 55px;
	left: 50%;
	transform: translateX(-50%);
}
.ema625_04_ih_0005 .text_area li {
	display: flex;
	align-items: center;
	gap: 10px;
}
.ema625_04_ih_0005 .text_area li p {
	font-weight: 700;
}
.ema625_04_ih_0005 .text_area li + li {
	margin-top: 20px;
}
.ema625_04_ih_0005 .boolean_wrap {
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
}
.ema625_04_ih_0005 .boolean_wrap > div {
	width: 100%;
	padding: 0 80px;
}
.ema625_04_ih_0005 .boolean_wrap button {
	background-color: transparent;
	width: 100%;
	height: 75px;
	border-color: transparent;
	padding: 0;
	position: relative;
}
.ema625_04_ih_0005 .boolean_wrap button:after {
	content: "";
	display: inline-block;
	width: 60px;
	height: 60px;
	mask: url(./../common/img/icon_checked_round.svg) no-repeat 50% / 60px auto;
	position: absolute;
	left: -12px;
	top: -2px;
}
.ema625_04_ih_0005 .boolean_wrap button.selected:after {
	background-color: var(--font-main);
}
.ema625_04_ih_0005 .boolean_wrap button.hint[data-answer-single="true"]:after {
	background-color: var(--secondary-red);
}
.ema625_04_ih_0005 .boolean_wrap button.correct[data-answer-single="true"]:after {
	background-color: var(--primary-blue);
}

