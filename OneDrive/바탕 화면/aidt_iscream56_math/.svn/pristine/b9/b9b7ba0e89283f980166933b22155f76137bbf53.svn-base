.nemo {
  display: inline-block;
  width: 32px;
  height: 32px;
  border: 2px solid var(--primary-blue);
  border-radius: 4px;
}

.input_wrap:has(.w_80) {
  min-width: 80px !important;
}
math-field.w_80 {
  width: 80px !important;
}
.input_wrap.hint_up .text_hint {
  bottom: calc(100% + 4px);
  top: auto;
  line-height: 1.5;
}
.input_wrap math-field.hint + .text_hint {
  line-height: 1.5;
}

.input_area:has(.input_sep) > span {
  position: relative;
}
.input_wrap.input_sep {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: -60px;
}

.input_wrap.hint_right .text_hint {
  left: calc(100% + 20px);
  top: 12px;
  width: auto;
}

.fraction_wrap .hint_up .text_hint {
  top: auto;
  bottom: calc(100% + 4px);
}
.fraction_wrap.hint_right .text_hint {
  top: 18px;
}

math-field.has_ex_text + .text_hint:before {
  content: 'ì˜ˆ';
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 44px;
  height: 44px;
  background: var(--primary-blue);
  border-radius: 12px;
  color: #fff;
  line-height: 42px;
}
.input_wrap math-field.large {
  width: 300px !important;
}
.w_large {
  width: 247px !important;
}
.formula_box .formula_row {
  display: flex;
}
.formula_box .formula_row + .formula_row {
  margin-top: 10px;
}
.formula_box .formula_row.bd_b + .formula_row:has(.input_wrap) {
  padding-top: 10px;
}
.formula_box .formula_row.bd_b {
  position: relative;
}
.formula_box .formula_row.bd_b:before {
  content: '';
  display: inline-block;
  width: calc(100% - 28px);
  height: 2px;
  background: var(--font-main);
  position: absolute;
  bottom: -13px;
  left: 29px;
}
.formula_box .formula_row > span {
  display: inline-block;
  height: 60px;
  width: 87px;
  text-align: center;
  line-height: 60px;
  position: relative;
}

.formula_box .formula_row > span:first-of-type {
  width: 34px;
}
.formula_box .formula_row > span.dot:after {
  content: '.';
  position: absolute;
  right: -7px;
  bottom: 15px;
  display: inline-block;
  line-height: 1;
  font-size: 32px;
}
.formula_box .formula_row > span.arrow_up:before {
  content: '';
  display: inline-block;
  width: 12px;
  height: 58px;
  background: url(./../common/img/img_formula_arrow.png) no-repeat 0 0 / 100% auto;
  position: absolute;
  right: -9px;
  bottom: 21px;
}
.formula_box .formula_row > span:has(.input_wrap).dot:after {
  bottom: 3px;
}
.formula_box .formula_row > span.dot + span:has(.input_wrap) {
  margin-left: 5px;
}
.formula_box .formula_row > span.wing:after {
  content: '';
  width: 11px;
  height: 60px;
  display: inline-block;
  vertical-align: top;
  background: url(./../common/img/icon_formula_wing.png) no-repeat 50% / 100% auto;
  position: absolute;
  right: -6px;
}
.pt_10 {
  padding-top: 10px;
}

