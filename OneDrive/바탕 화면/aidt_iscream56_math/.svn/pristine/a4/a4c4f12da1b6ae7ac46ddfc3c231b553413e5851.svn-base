.foldable_box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 1012px;
  height: 354px;
  margin: 0 auto;
  gap: 150px;
}
.foldable {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;


  img {
    max-width: none;
    transition: transform 0.3s ease;
    backface-visibility: hidden;
  }

  .left {
    z-index: 1;
  }

  &[data-type="crown"] img {
    width:540px;
    height:420px;
  }
  &[data-type="bird"] img {
    width:440px;
    height: 420px;
  }

  .center-line {
    position: absolute;
    left: 50%;
    top: 31px;
    width: 12px;
    height: 86%;
    background: #E6007E;
    border: 4px #fff solid;
    z-index: 5;
    cursor: url(../common/img/cursor_pointer_small.svg) 35 15, auto;
    border-radius: 6px;
    transform: translateX(-50%)
  }

  .img_motion {
    opacity: 0;
    position:absolute;
    top: 0;
      left: 0;
    z-index: 3;
  }
  
}

.ema523_04_su_0003[data-current-page='page_1'] .btnCheck {
  display: none;
}

