
/*EMA523_12_SU_0002_s*/
.ema523_12_su_0002 {
  .figure_wrap {
    display: flex;
    align-items: center;
    width: 1401px;
    height: 302px;
    background: url(../img/EMA523_12_SU/0002_bg.svg) no-repeat 0 0;
    padding: 0 50px;
    gap:96px;
  }

  .figure_triangle {
    position: relative;
    width: 251px;
    .txt {
      position: absolute;
      top:0px;
      left:0px;
      font-size: 32px;
      font-weight: 700;
    }
  }

  .figure_group1 {
    transform: translate(0, 25px);
    flex-shrink: 0;
    .txt {
      left: 90px;
      top: 74px
    }
  }

  .boolean_wrap {
    gap:0;

    button {
      position:relative;
      width: 256px;
      height: 302px;
      background-color: transparent;
      border-color: transparent;
      padding: 0;
      border-radius: 0;
      justify-content: flex-start;

      &:nth-child(1) {
        margin-right: 96px;
        img {
          transform: translate(0, 0);
        }
        
      }
      &:nth-child(2) {
        margin-right: 48px;
        img {
          transform: translate(-3px, 25px);
        }
      }
      &:nth-child(3) {
        width: 299px;
        img {
          transform: translate(3px, -27px);
        }
      }

      .txt {
        width: 68px;
        height: 68px;
        padding: 10px;

        &:after {
          content: '';
          position: absolute;
          top:50%;
          left:50%;
          display: block;
          width:68px;
          height: 68px;
          border:4px transparent solid;
          border-radius: 50%;
          transform: translate(-50%, -56%);
        }
      }

      /* &:hover .txt::after {
        content: '';
        border-color: var(--primary-blue-300)
      } */
      &.selected .txt::after {
        content: '';
        border-color: #222;
      }
    }
  }
  .figure_group2 {
    .txt-2 {
      left: 80px;
      top: 151px
    }
    .txt-3 {
      left: 102px;
      top: 161px
    }
    .txt-4 {
      left: 169px;
      top: 66px
    }
  }
}

.result button.selected.correct[ddata-answer-single="true"],
.result button.correct[data-answer-single="true"] {
  .txt::after {
    content: '';
    background-color: rgba(59, 113, 254, 0.30);
    border-color:var(--primary-blue);
  }
}

.result button.selected.hint {
  .txt::after {
    content: '';
    background-color: transparent;
    border-color:#222;
  }
}

.result button.hint {
  .txt::after {
    content: '';
    background-color: transparent;
    border-color:#EE4F24;
  }
}


