/*EMA523_12_SU_0004_s*/
.ema523_12_su_0004 {
  .figure_wrap {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap:150px;
  }
  .figure_triangle {
    display: flex;
    align-items: flex-start;
    gap:10px;
    .txt {
      font-size: 32px;
      font-weight: 700;
      color: #222;
    }
  }
  
  .dragndrop_fraction_wrap {
    display: flex;
    align-items: center;
    gap:60px;
    .drag_group {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 124px;
      border-radius: 20px;
      background-color: #F7F7F7;
      padding:0 60px;
      gap: 20px;

      .drag_item {
        display: flex;
        width: 44px;
        height: 44px;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        border: 2px solid #222;
        font-size: 24px;
        font-weight: 700;
        gap: 10px;
        cursor: pointer;
      }
    }
    .drop_group {
      display: flex;
      flex-wrap: wrap;
      align-items: flex-end;
      gap: 10px;
      padding: 0 60px;

      &::before {
        content: '(';
        font-size: 32px;
        font-weight: 700;
      }
      &::after {
        content: ')';
        font-size: 32px;
        font-weight: 700;
      }

      .drop_item {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        border-radius: 12px;
        border: 2px solid #222;
        position: relative;
        font-size: 24px;
        font-weight: 700;

        &.correct  {
          border-color: #3B71FE;
        }
        &.hint  {
          border-color: #EE4F24;
        }
      }
    }
    .drop_group:has(.drop_item) {
      border-color: #3B71FE;
    }
  }
}
