    flex-direction: column;
    gap: 36px;

    .title {
      position:relative;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 64px;
      border-radius: 999px;
      font-size: 32px;
      font-weight: 700;
      padding: 0 28px;

      &::before {
        content: '';
