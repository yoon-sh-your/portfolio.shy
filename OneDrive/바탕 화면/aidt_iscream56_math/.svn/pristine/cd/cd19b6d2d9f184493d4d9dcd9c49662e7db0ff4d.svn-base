@charset "utf-8";

.toastSubmit{
  border-radius: 20px;
  width: 500px;
  height: 330px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20px;
  box-shadow: 0 0 10px #22222290;
  position: absolute;
  z-index: 99;
  background-color: white;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
}
.btn_area>button:not(.btnType, .btnSample).active.unactiveBtn{
  pointer-events: none;
  background-color: var(--btn-disabled-bg);
  border-color: var(--stroke-default);
  background-image: url(../../common_contents/common/img/icon_submit_disabled.svg);
}

.multi_input_wrap math-field.hint:disabled.duplicate.correct, .multi_input_wrap math-field.hint:disabled.duplicate{
  background-color: var(--secondary-coral-300);
  opacity: 1;
  color: black;
}
.input_wrap math-field.hint.duplicate + .text_hint{
  opacity: 0;
}
