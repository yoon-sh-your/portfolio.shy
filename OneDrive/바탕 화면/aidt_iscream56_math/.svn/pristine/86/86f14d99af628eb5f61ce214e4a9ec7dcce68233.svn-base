/*EMA626_03_SU_0003_s*/
.ema626_03_su_0003 .check_shape {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40px;
}
 
.ema626_03_su_0003 .check_shape .s_item_expend {
  position: relative;
}
.ema626_03_su_0003 .page_1 .custom_select.math_symbol .select_options li[data-value='○'] {
    background-image: url(../../common_contents/img/EMA626_03_SU/0003_ico_circle.svg);
}
.ema626_03_su_0003 .page_1 .custom_select.math_symbol .select_options li[data-value='△'] {

    background-image: url(../../common_contents/img/EMA626_03_SU/0003_ico_triangle.svg);
}
.custom_select.math_symbol .select_trigger.completion {
  border:0;
  background-color: transparent;
}
.ema626_03_su_0003 .page_1 .custom_select.math_symbol .select_trigger.completion[data-value='○'] {
  background-size: 32px;
  background-image: url(../../common_contents/img/EMA626_03_SU/0003_ico_circle_on.svg);
}
.ema626_03_su_0003 .page_1 .custom_select.math_symbol .select_trigger.completion[data-value='△'] {
  background-size: 30px 26px;
  background-image: url(../../common_contents/img/EMA626_03_SU/0003_ico_triangle_on.svg);
}
.ema626_03_su_0003 .page_1 .check_shape .s_item_expend .dropdown_wrap {
  position: absolute;

  .text_hint {
    top:68%;
  }
}  
.ema626_03_su_0003 .page_1 .check_shape .s_item_expend .ps01 {
  top: 2px;
  left: 84px;
}
.ema626_03_su_0003 .page_1 .check_shape .s_item_expend .ps02 {
  top: 79px;
  left: 2px;
  .custom_select.math_symbol {
    width: 241px;
    height: 91px;

    .select_trigger {
      border-radius: 0;
    }
  }  
}
.ema626_03_su_0003 .page_1 .check_shape .s_item_expend .ps03 {
  top: 171px;
  left: 84px;
}
.ema626_03_su_0003 .custom_select.math_symbol {
  width:78px;
  height: 78px;

  .select_trigger {
    background-color: transparent;
    border: 0;
  }

  .select_trigger .arrow {
    background: transparent;
  }
} 
.custom_dropdown.correct + .custom_select.math_symbol .select_trigger.completion,
.custom_dropdown.hint + .custom_select.math_symbol .select_trigger.completion {
  left: 50%;
  top: 50%;
  width:40px;
  height: 40px;
  border-radius: 50% !important;
  transform: translate(-50%, -50%);
}
.ema626_03_su_0003 .page_2 .input_wrap {
  display: flex;
  margin: 10px auto 0;

  math-field.textarea{
    height: 80px;
    min-height: auto;
  }
}
.ema626_03_su_0003[data-current-page="page_2"] .btnSubmit {
  display: block;
}
.ema626_03_su_0003 .btnSubmit,
.ema626_03_su_0003[data-current-page="page_2"] .btnCheck,
.ema626_03_su_0003[data-current-page="page_3"] section.title {
  display: none;
}

/*EMA626_03_SU_0004_s*/
.ema626_03_su_0004 {
  .boolean_wrap {
    width:620px;
    flex-wrap: wrap;
    gap:0;
  }
  .boolean_wrap button {
    width: calc(100% / 3);
    height: 200px;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    border-radius: 0;
    &:hover {
      border-color:transparent;
  
      .text {
        border-color: var(--primary-blue-300);
      }
    }
    &.selected {
      border-color:transparent;
  
      .text {
        border-color: var(--font-main);
      }
    }
    &.selected.correct,
    &.selected.correct.hint {
      .text {
        border-color: var(--primary-blue);
        background-color: rgba(59, 113, 254, 0.30);
      }
    }
    &.selected.hint {
      .text {
        border-color: #222;
      }
    }
    &.hint {
      border-color:transparent;
      .text {
        border-color: var(--secondary-red);
      }
    }
    .img {
      width:104px;
      height: 137px;
      margin-top:-29px;
    }
  
    .text {
      display: flex;
      align-items: center;
      justify-content: center;
      width:60px;
      height: 60px;
      font-size: 32px;
      font-weight: 700;
      border:4px transparent solid;
      border-radius: 50%;
      flex-shrink: 0;
      margin-left: -145px;
    }
  }

  &[data-current-page="page_1"] .boolean_wrap button.disabled[data-answer-single="true"] .text {
    border-color: var(--primary-blue);
    background-color: rgba(59, 113, 254, 0.30);
  }
  .question_box {
    flex-direction: column;
    justify-content: center;

    &.input_row {
      flex-direction: row;
      align-items: flex-start;
    }
  }
  .question_input_wrap .inner.inner2,
  .question_input_wrap .inner.inner3 {
    display: none;
  }
  .question_img_wrap {
    display: flex;
    align-items: flex-start;
    gap:20px;
    > div {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 180px;
      height: 200px;
    }
    .text {
      font-size: 32px;
      font-weight: 700;
      transform: translate(-77px, 0);
    }
  }
  .question_input_wrap .inner{
    font-size: 32px;
    font-weight: 700;
    display: flex;
    align-items: flex-start;
    gap:12px;
    .custom_select {
      width: 170px;
    }

    .input_wrap .textarea {
      width: 950px;
      height: 80px;
      min-height: auto;
    }
  }
} 

.ema626_03_su_0004[data-current-page="page_1"] .btnCheck,
.ema626_03_su_0004[data-current-page="page_2"] .btn_area,
.ema626_03_su_0004[data-current-page="page_3"] .btnSubmit,
.ema626_03_su_0004[data-current-page="page_4"] .btnSubmit {
  display: none;
}

/*EMA626_03_SU_0005_s*/
.ema626_03_su_0005 {
  .img_wrap {
    position: relative;
    margin-bottom: 10px;
    .text_box {
      position: absolute;
      top: 0;
      left:0;
      display: flex;
      flex-direction: column;

      .text {
        font-size: 32px;
        font-weight: 700;
        &.text01 {
          transform: translate(49px, 20px);
        }
        &.text02 {
          transform: translate(9px, 34px);
        }
      }
    }
  }
  .connect_box_wrap {
    display: flex;
    gap:10px;

    .connect_text_box {
      display: flex;
      flex-direction: column;
      gap:32px;
      li {
        display: flex;
        align-items: center;
        justify-content: center;
        width:320px;
        height: 70px;
        border-radius: 999px;
        font-size: 32px;
        font-weight: 700;
      }
      &.start li {
        background-color:#E4DBEC;
      }
      &.end li {
        background-color:#EEF9FF;
      }
    }
    .connect_wrap {
      width:280px;
      height: 173px;

      .start_group, .end_group {
        gap:78px;
      }
    }
  }
  &[data-current-page="page_2"] .input_wrap {
    width: 100%;

    math-field.textarea {
      height: 85px;
      min-height: auto;
    }
  }
  .input_form {
    display: flex;
    align-items: center;
    font-size: 32px;
    font-weight: 700;
    gap: 8px;
  }
}
.ema626_03_su_0005[data-current-page="page_1"] .btnType, 
.ema626_03_su_0005[data-current-page="page_1"] .btnSubmit,
.ema626_03_su_0005[data-current-page="page_2"] .btnCheck,
.ema626_03_su_0005[data-current-page="page_3"] .btnSubmit {
  display: none;
}
.ema626_03_su_0005[data-current-page="page_2"] .btnType, 
.ema626_03_su_0005[data-current-page="page_2"] .btnSubmit {
  display: block;
}


