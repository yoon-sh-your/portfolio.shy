@charset "uft-8";
/* .ema514_09_su_0003 */

.ema514_09_su_0003 .top-buttons {
    text-align: center;
}
.ema514_09_su_0003 .card-btn {
    padding: 12px 20px;
    border-radius: 12px;
    font-size: 20px;
    line-height: 1.6;
    background: var(--primary-blue);
    color: #fff;
}

.ema514_09_su_0003 .card-btn:disabled {
    cursor: default;
    pointer-events: none;
    background-color: var(--btn-disabled-bg);
    border-color: var(--stroke-default);
    color: var(--font-disabled);
}
.ema514_09_su_0003 .card {
    position: relative;
    font-family: "Pretendard HeadNumer";
    font-size: 44px;
    font-weight: 700;
    width: 171px;
    height: 212px;
    margin: 20px auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: url("../../common_contents/img/EMA514_09_SU/0003_card.png") no-repeat center;
    math-field {
        font-family: "Pretendard HeadNumer";
        border: none;
    }
}

.ema514_09_su_0003 .container {
    display: flex;
    gap: 30px;
    margin-top: 30px;
}

.ema514_09_su_0003 .player {
    flex: 1;
    padding: 30px;
    border-radius: 30px;
    text-align: center;
}
.ema514_09_su_0003 .player-1 {
    background: #e2f0d9;
    .hand[data-count="5"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-5.png") no-repeat center;
    }
    .hand[data-count="4"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-4.png") no-repeat center;
        transform: translateX(16px);
    }
    .hand[data-count="3"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-3.png") no-repeat center;
        transform: translateX(16px);
    }
    .hand[data-count="2"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-2.png") no-repeat center;
        transform: translateX(15px);
    }
    .hand[data-count="1"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-1.png") no-repeat center;
        transform: translateX(14px);
    }
    .hand[data-count="0"] {
        background: url("../../common_contents/img/EMA514_09_SU/players/player-1-0.png") no-repeat center;
        transform: translateX(4px);
    }
}
