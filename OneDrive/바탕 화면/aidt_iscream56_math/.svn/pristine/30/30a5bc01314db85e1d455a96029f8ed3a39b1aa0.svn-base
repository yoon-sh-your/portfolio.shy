    display: block;
}
.info-section {
    width: 450px;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 50px;
    justify-content: center;
    .timer-wrap {
        display: flex;
        align-items: center;
        gap: 20px;
        .timer-box {
            display: flex;
            justify-content: space-between;
            gap: 30px;
            padding: 20px 40px;
            border-radius: 20px;
            background: var(--BG-Blue-Gray, #eef0f4);
            label {
                padding: 0;
                input {
                    width: 80px;
                    height: 60px;
                    padding: 16px 0;
                    border-radius: 12px;
                    border: 2px solid var(--Primary-Primary_T_Blue-600, #3b71fe);
                    background: var(--black-white-white, #fff);
                    text-align: center;
                    overflow: hidden;
                }
                span {
                    font-weight: 400;
                    padding-left: 5px;
                }
            }
        }
    }
    .score-wrap {
        display: flex;
        flex-direction: column;
        gap: 20px;
        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            border-radius: 20px;
            border: 2px solid #ead16e;

            background: #ffea73;
            font-size: 32px;
            &:nth-of-type(2) {
                border: 2px solid #8cc2ff;

                background: #d2e7ff;
            }
            p {
                display: flex;
                align-items: center;
                font-weight: 700;
                gap: 8px;
                span {
                    color: var(--Blue-T800, #1454b9);
                }
                em {
                    font-size: 24px;
                    font-style: normal;
                }
            }
        }
    }
}
#app_wrap section button {
    all: unset;
    box-shadow: 0 8px 24px 0px rgba(0, 0, 0, 0.12);
    &.btnCheck,
    &.btnReset {
        font-size: 0;
        width: 64px;
        height: 64px;
        border-radius: 12px;
    }
    &.btnCheck {
        background: #3b71fe url("../../common_contents/common/img/icon_check_white.svg") no-repeat center/ contain;
        background-size: 40px;
        &:disabled {
            border-color: var(--stroke-default);
            background: var(--btn-disabled-bg) url("../../common_contents/common/img/icon_check_disabled.svg") no-repeat center;
        }
    }
    &.btnReset {
        background: #3b71fe url("../../common_contents/common/img/icon_reset_white.svg") no-repeat center/ contain;
        background-size: 40px;
        &:disabled {
            border-color: var(--stroke-default);
            background: var(--btn-disabled-bg) url("../../common_contents/common/img/icon_reset_disabled.svg") no-repeat center;
        }
    }
}

input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type="number"] {
    -moz-appearance: textfield;
}
