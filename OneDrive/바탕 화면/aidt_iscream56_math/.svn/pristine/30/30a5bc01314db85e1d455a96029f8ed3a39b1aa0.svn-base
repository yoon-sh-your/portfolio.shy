.modal {
    position: absolute;
    background: rgba(246, 249, 251, 0.9);
    border: 4px solid #1454b9;
    padding: 20px;
    border-radius: 20px;
    z-index: 999;
    display: none;
    .close {
        position: absolute;
        top: -20px;
        right: -20px;
        width: 35px;
        height: 35px;
        background: url(../../common_contents/img/EMA613_10_SU/modal-close.png) no-repeat center;
        min-width: auto;
        padding: 0;
        transform: translate(50%, -50%);
        font-size: 0;
    }
    .check {
        background-image: url(../..//common_contents/common/img/icon_check_disabled.svg);
        pointer-events: none;
        background-color: var(--btn-disabled-bg);
        border-color: var(--stroke-default);
        width: 64px;
        min-width: unset;
        height: 64px;
        border-radius: 16px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: 40px;
        font-size: 0;
        padding: 0;
        transition: box-shadow 0.1s ease-in-out, background-color 0.1s ease-in-out;
        box-shadow: 0 8px 24px 0 rgba(0, 0, 0, 0.12);
    }

    .check {
        background-image: url(../..//common_contents/common/img/icon_check_white.svg);
        pointer-events: all;
        background-color: var(--btn-default);
        border-color: transparent;
    }
}
.modal.show {
    display: block;
}
.modal-inner {
    position: relative;
    width: 100%;
    height: 100%;
}
.quiz {
    display: flex;
    align-items: center;
    gap: 14px;
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 20px;
    color: #222;
    p {
        margin-right: -10px;
    }
    input {
        text-align: center;
        width: 80px;
        height: 60px;
        padding: 16px 20px;
        border-radius: 12px;
        border: 2px solid var(--Primary-Primary_T_Blue-600, #3b71fe);
        background: var(--black-white-white, #fff);
    }
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
    .calc-icon {
        width: 64px;
        min-width: unset;
        height: 64px;
        border-radius: 16px;
        border: 1px solid var(--primary-blue-800);
        background-color: var(--bg-default);
        background-position: center;
        background-repeat: no-repeat;
        background-size: 40px;
        font-size: 0;
        background-image: url(../../common_contents/common/img/icon_formula.svg);
        border-color: var(--stroke-default);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    }
}
.actions {
    font-size: 24px;
    display: flex;
    margin: 0 auto 20px auto;
    width: 307px;
    align-items: center;
    justify-content: center;
    gap: 20px;
    border-radius: 50px;
    height: 84px;
    background: #d2d2d2;
    button {
        width: 64px;
        height: 64px;
        box-shadow: 0px 8px 24px 0px #0000001f;
        min-width: auto;
        padding: 0;
        border-radius: 50%;
        font-size: 0;
    }
    .circle.ok {
        background: url("../../common_contents/img/EMA613_10_SU/button-ok.png") no-repeat center #fff;
    }
    .circle.no {
        background: url("../../common_contents/img/EMA613_10_SU/button-no.png") no-repeat center #fff;
    }
}
.colors .yellow {
