.nemo {
	display: inline-block;
	width: 32px;
	height: 32px;
	border: 2px solid var(--primary-blue);
	border-radius: 4px;
}

.layout_grid.question_box {
	width: 100%;
	justify-content: center;
	margin-top: 60px;
}
.layout_grid .input_area {
	margin: 20px 0 0 50px;
}
.layout_grid .input_row {
	margin-bottom: 40px;
}
.layout_grid .input_row > span {
	display: inline-block;
	vertical-align: middle;
}
.layout_grid .input_row:first-of-type {
	margin-bottom: 28px;
}
.layout_grid .img_area {
	position: relative;
}
