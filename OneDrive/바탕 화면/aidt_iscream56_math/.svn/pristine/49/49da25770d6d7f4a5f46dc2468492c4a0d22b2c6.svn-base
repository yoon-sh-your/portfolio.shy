/* 공통 css 제거 */
.ema516_02_ih_0006 .boolean_wrap button {
	border-radius: 0;
	background: none;
	border: 0;
	padding: 0;
	height: auto;
	aspect-ratio: unset;
	width: auto;
	background-color: transparent !important;
	border-color: transparent !important;
}
/* .ema516_02_ih_0006 .boolean_wrap button.hint {
	border: 3px dashed transparent;
} */

.ema516_02_ih_0006 .boolean_wrap button + button {
	margin-top: 11px;
}
.ema516_02_ih_0006 .boolean_wrap {
	width: 745.6px;
	height: 288px;
	background: url(./../../common_practice/img/EMA516_02_IH/0006_bg.png) no-repeat 50% / 100% auto;
	margin: 0 auto;
}
.ema516_02_ih_0006 .boolean_wrap button.hint[data-answer-single="true"]:after {
	background-color: var(--secondary-red);
}
.ema516_02_ih_0006 .boolean_wrap.result button[data-answer-single="true"].correct:after {
	background-color: var(--primary-blue);
}
.ema516_02_ih_0006 .boolean_wrap > div {
	width: 100%;
	padding: 0 0 0 80px;
}
.ema516_02_ih_0006 .boolean_wrap button {
	position: relative;
	border: 3px dashed transparent;
}
.ema516_02_ih_0006 .boolean_wrap button:hover {
	border-color: transparent;
}
.ema516_02_ih_0006 .boolean_wrap button:after {
	content: "";
	display: inline-block;
	width: 60px;
	height: 60px;
	mask: url(./../../common_practice/common/img/icon_checked_round.svg) no-repeat 50% / 60px auto;
	position: absolute;
	top: -20px;
	left: -50px;
}
.ema516_02_ih_0006 .boolean_wrap button.selected:after {
	background-color: #222;
}
.ema516_02_ih_0006 .boolean_wrap button p {
	font-weight: 700;
}
