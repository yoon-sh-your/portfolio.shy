/* 스스로 평가하기 별점 팝업 */
.rate-popover {
  position: absolute;
  bottom: 84px;
  left: 50%;
  transform: translateX(-50%);
  background: #eef9ff;
  border-radius: 32px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  z-index: 2;
}

.rate-popover:after {
  content: '';
  position: absolute;
  bottom: -18px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-top: 20px solid #eef9ff;
  border-left: 11px solid transparent;
  border-right: 11px solid transparent;
}

.rate-popover .rate-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 360px;
  height: 204px;
  gap: 10px;
}

.rate-popover .stars {
  display: flex;
  gap: 8px;
  justify-content: center;
}

.rate-popover .stars .star {
  width: 80px;
  height: 80px;
  background: url(../img/star_eval.svg) no-repeat center center / contain;
  min-width: 0;
  padding: 0;
}

.rate-popover .stars .star.active {
  background-image: url(../img/star_eval_on.svg);
}

.rate-popover .close_popup {
  position: absolute;
  top: -32px;
  right: -32px;
  width: 64px;
  height: 64px;
  min-width: 0;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.rate-popover .close_popup:before,
.rate-popover .close_popup:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 4px;
  height: 32px;
  margin: -16px 0 0 -2px;
  border-radius: 4px;
  background: #000;
}

.rate-popover .close_popup:before {
  transform: rotate(45deg);
}

.rate-popover .close_popup:after {
  transform: rotate(-45deg);
}

