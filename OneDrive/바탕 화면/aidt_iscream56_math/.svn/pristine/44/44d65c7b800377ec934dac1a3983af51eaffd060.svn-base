@charset "utf-8";

/*EMA522_01_SU_0001_s*/
.ema522_01_su_0001#app_wrap {
    background: url(../img/EMA522_01_SU/0001_content.png) no-repeat left bottom / 857px, #91C14A;
}

.ema522_01_su_0001 .input_area label.img,
.ema522_01_su_0001 .input_area label::after {
    background-color: #008834;
}

.ema522_01_su_0001 {
    .text_box {
        color: #008834;

        .mixed_fraction {
            font-size: 20px !important;
            font-weight: 700 !important;
            margin: 0 !important;
        }
    }

    .info {
        position: absolute;
        bottom: 141px;
        left: 393px;
        font-size: 16px;
    }
}

/* .EMA522_01_su_0002 */
.ema522_01_su_0002 {

    .video_wrap {
        background: url(../img/EMA522_01_SU/0002_img01.png) no-repeat;
        border-radius: 20px;

        .txt1 {
            position: absolute;
            left: 60px;
            top: 116px;
            width: 168px;
            height: 50px;
            text-align: center;
        }

        .txt2 {
            position: absolute;
            left: 500px;
            top: 110px;
            width: 190px;
            height: 50px;
            text-align: center;
        }
    }
}

/*EMA522_01_SU_0003_s*/
.ema522_01_su_0003 {
    .fraction_box {
        &+[class^="mr_"] {
            margin-bottom: -6px;
        }
    }

    .mixed_fraction {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;

        .fraction_box {
            span {
                span {
                    display: inline-flex;
                    font-size: 18px;
                    padding-bottom: 10px;
                    position: relative;
                    bottom: 11px;
                }
            }
        }
    }
}

/*EMA522_01_SU_0004_s*/
.ema522_01_su_0004 {
    .video_wrap button.play {
        top: 42%;
    }

    .video_wrap {
        background: url(../img/EMA522_01_SU/0004_content.png) no-repeat center 0 / 100%;
        border: none;
    }

    .input_wrap math-field.textarea {
        height: 374px;
    }

    .input_area {
        width: 797px;
    }

}

