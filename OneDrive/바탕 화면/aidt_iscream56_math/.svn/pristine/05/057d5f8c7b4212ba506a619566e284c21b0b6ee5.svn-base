            }

        }
    }

    .mixed_fraction:has(.abs_2) {
        position: relative;
        padding-left: 180px;

        .abs_2 {
            position: absolute;
            left: 0;
            width: 180px;
            height: 140px;
            background: url(../img/EMA522_03_SU/0004_img02.png) no-repeat;

            svg {
                position: absolute;
                left: 20px;
                top: 72px;
            }

        }
    }

    /* } */

    /* .page_1  */
    .fraction_box:has(.division_1 .input_wrap)>span:nth-child(2) {
        height: normal;
        display: flex;
        align-items: start;
    }

    /* .page_2 { */
    .input_area {
        /* width: 1208px; */

        .input_wrap {
            /* width: 100%; */

            math-field.textarea {
                height: 74px;
                min-height: auto;
            }
        }
    }

    .input_wrap ol.example_box li {
        padding-left: 0;

        &:before {
            display: none;
        }
    }

    /* } */
    /* &[data-current-page="page_1"] .btn_area .btnSubmit,
    &[data-current-page="page_2"] .btn_area .btnCheck {
        display: none;
    } */

    hr {
        border: none;
        width: 741px;
        height: 3px;
        background: url(../img/EMA522_02_SU/0005_img03.png) no-repeat;
    }

    .fraction_box:has([class^="division_"]) {
        position: relative;

    }

    .division_1 {
        position: absolute;
        /* top: -45px; */
        bottom: 90%;
        left: 50%;
        transform: translateX(-50%);
        font-style: normal;
        color: #E4007F;

        &::after {
            content: '';
            position: absolute;
            top: 63px;
            left: 20px;
            width: 40px;
            height: 40px;
            background: url(../img/EMA522_02_SU/0005_line.png) no-repeat 0 / 100%;
        }
    }

    .division_2 {
        position: absolute;
        /* bottom: -39px; */
        top: 102px;
        font-style: normal;
        color: #E4007F;

        &::after {
            content: '';
            position: absolute;
            top: -38px;
            left: -8px;
            width: 40px;
            height: 40px;
            background: url(../img/EMA522_02_SU/0005_line.png) no-repeat 0 / 100%;
        }
    }

    .balloon_wrap {
        position: absolute;
        top: 320px;
        left: 1245px;
        width: 232px;
        height: 224px;
        text-align: center;
        font-size: 24px;
        background: url(../img/EMA522_05_SU/0004_img01.png) no-repeat center 0 / 100%;
    }
}

