/* EMA522_02_SU_0003_s  */
.ema522_03_su_0003 {

    .picture_wrap {
        img {
            top: 53%;
        }

        .tag1 {
            position: absolute;
            left: 11px;
            top: 261px;
            text-align: center;
            z-index: 1;
        }

        .tag2 {
            position: absolute;
            left: 532px;
            top: 75px;
            text-align: center;
            z-index: 1;
        }
    }

    .page_1 {
        .input_wrap math-field:not(.textarea) {
            width: 200px;
        }
    }


    .page_2 {
        h3 {
            white-space: nowrap;
        }

        .input_area {
            width: 1208px;

            .input_wrap {
                width: 100%;

                math-field.textarea {
                    /* height: 158px; */
                }
            }
        }
    }

    .page_3 {
        .reveal_wrap {
            position: relative;
            width: 1230px;
            height: 100px;
            background: url(../../common_contents/img/EMA522_03_SU/0003_img01.png) no-repeat center 0 / 100%;
            margin: auto;

            .abs_1 {
                position: absolute;
                top: 0px;
                left: 590px;
            }

            .abs_2 {
                position: absolute;
                top: 87px;
                left: 590px;
            }

            .reveal_btn {
                position: absolute;
                right: 0;
                width: 532px;
                bottom: 0;
                top: 0;
                border-radius: 10px;

                &.on {
                    background-color: transparent;
                    border: none;
                }

                &:not(:disabled):after {
                    bottom: 0;
                }
            }

        }

        .sign_start {
            position: relative;
            top: -10px;
            font-size: 100px;
            font-weight: 100;
            line-height: normal;

        }

        .question_box {
            padding: 40px 50px;
            margin: 0 20px;
            /* border: 5px solid #A0D1C0; */
            border-radius: 30px;
            gap: 10px;

            .tit {
                display: flex;
                gap: 10px;
                align-items: center;
                justify-content: center;
                font-size: 20px;
                line-height: 32px;
                letter-spacing: -0.5px;
            }

        }

        .input_wrap,
        .input_wrap input,
        .input_wrap math-field {
            width: 80px;
            min-width: 80px;
        }

        .label {
            display: inline-flex;
            width: 107px;
            height: 52px;
            background: url(../../common_contents/common/img/title_mid_9.svg) no-repeat center;
        }

        .label i {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }

    }

    .page_4 {
        .reveal_wrap {
            position: relative;
            width: 1230px;
            height: 115px;
            background: url(../../common_contents/img/EMA522_03_SU/0003_img02.png) no-repeat center 0 / 100%;
            margin: auto;

            svg {
                position: absolute;
                top: 0;
                left: 0;
            }

            .reveal_btn {
                position: absolute;
                right: 0;
                width: 442px;
                bottom: 0;
                top: 0;
                border-radius: 10px;

                &.on {
                    background-color: transparent;
                    border: none;
                }

                &:not(:disabled):after {
                    bottom: 0;
                }
            }
        }


        .question_box {
            padding: 40px 50px;
            margin: 0 20px;
            /* border: 5px solid #A0D1C0; */
            border-radius: 30px;
            gap: 4px;

            .tit {
                display: flex;
                gap: 10px;
                align-items: center;
                justify-content: center;
                font-size: 20px;
                line-height: 32px;
                letter-spacing: -0.5px;
            }

        }


        .input_wrap,
        .input_wrap input,
        .input_wrap math-field {
            width: 80px;
            min-width: 80px;
        }

        .label {
            display: inline-flex;
            width: 107px;
            height: 52px;
            background: url(../../common_contents/common/img/title_mid_10.svg) no-repeat center;
        }

        .label i {
            position: absolute;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }


    }

    .page_5 {
        .mt_70 {
            margin-top: 70px !important;
        }

        .input_area {
            width: 1208px;

            .input_wrap {
                width: 100%;

                math-field.textarea {
                    height: 80px;
                    min-height: auto;
                }

                .example_box {
                    height: 98px;
                }
            }
        }
    }

    .page_6 {}
}

