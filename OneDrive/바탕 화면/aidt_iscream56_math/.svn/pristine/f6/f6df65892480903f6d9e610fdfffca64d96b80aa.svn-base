    <!-- 공통 css-->
    <link rel="stylesheet" href="./../../common_contents/common/css/app.css" />

    <!-- 개별 -->
    <link rel="stylesheet" href="./../../common_practice/common/css/app.css" />
    <link rel="stylesheet" href="./../../common_practice/css/ema516_10.css" />
  </head>
  <body>
    <div id="app_wrap" class="ema516_10_ih_0005">
      <section class="title type2">
        <h2 data-head="5" lang="y">넓이가 다른 삼각형을 찾아 기호를 써 보세요.</h2>
      </section>
      <section class="contents">
        <div class="question_box justify_center mt_40 align_end">
          <div class="img_area">
            <img src="./../../common_practice/img/EMA516_10_IH/0005_01.png" alt="" />
            <p class="text_square_bg">1 ㎠</p>
            <p class="text1">가</p>
            <p class="text2">나</p>
            <p class="text3">다</p>
          </div>
          <div class="input_area ml_30">
            <span>&#40;</span>
            <div class="input_wrap">
              <math-field data-answer-single="나" class="w_136"></math-field>
            </div>
            <span>&#41;</span>
          </div>
        </div>
        <!-- 해설 -->
        <div class="solve_area">
          <div class="inner_solve">
            <div class="flex">
              <strong class="tit_solve" lang="y">해설</strong>
              <div class="conts_solve">
                <p lang="y">삼각형의 모양은 달라도 밑변의 길이와 높이가 각각 같으면 넓이가 같습니다. 나는 가, 다와 높이는 같지만 밑변의 길이가 다르므로 넓이가 다른 삼각형은 나입니다.</p>
              </div>
            </div>
            <div class="buttons_solve"></div>
          </div>
        </div>
        <div class="btn_area">
          <button class="btnType key">입력타입토글</button>
          <button class="btnReset">리셋</button>
          <button class="btnCheck">확인</button>
        </div>
      </section>
    </div>
