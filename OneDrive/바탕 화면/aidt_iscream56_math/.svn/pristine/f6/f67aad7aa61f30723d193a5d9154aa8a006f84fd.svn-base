/* .ema522_03_su_0003 */
.ema522_04_su_0003 {
    .page_1 {
        .input_wrap math-field:not(.textarea) {
            width: 300px;
            height: 112px;
        }

        .img_area {
            position: relative;
            width: 961px;
            height: 210px;
            flex: none;
            margin: auto;

            &>.flex:nth-last-child(1) {
                position: absolute;
                top: 65px;
                left: 570px;
                width: 212px;
            }

            &>.flex:nth-last-child(2) {
                position: absolute;
                top: 78px;
                left: 190px;
                width: 280px;
            }
        }
    }

    .page_2 {
        .boolean-counts {
            position: relative;
            width: 1110px;
            height: 426px;
            background: url(../img/EMA522_04_SU/0003_img02.png) no-repeat 0 / 100%;

            .boolean_count_wrap button {
                width: 200px;
                height: 48px;

                &.selected {
                    background-color: #3b71fe;
                }
            }

            .boolean_count_wrap.col button:not(:first-child)::before {
                height: 2px;
            }

            .abs_1 {
                position: absolute;
                top: 140px;
                left: 30px;
            }

            .abs_2 {
                position: absolute;
                top: 50px;
                left: 850px;
            }

            .abs_3 {
                position: absolute;
                top: 48px;
                left: 152px;
                font-size: 24px;
                display: flex;
                flex-wrap: wrap;
                gap: 110px 84px;
                width: 600px;
            }

            .abs_4 {
                position: absolute;
                bottom: 50px;
                right: -150px;
                background: url(../img/EMA522_03_SU/0003_img03.png) no-repeat 0 / 100%;
                width: 300px;
                height: 230px;
                padding: 54px 150px 40px 20px;
            }
        }
    }

    .page_3 {
        .picture_wrap {
            flex: 0 0 auto;
            width: 812px;
            position: relative;
        }

        /* .input_wrap math-field:not(.textarea) {
            width: 80px;
            height: 112px;
        } */
    }
}

