      <section class="contents">
        <div class="question_box">
          <div class="item">
            <div class="input_wrap">
              <math-field data-answer-single="0.047"></math-field>
            </div>
          </div>
          <div class="item">
            <div class="input_wrap">
              <math-field data-answer-single="0.47"></math-field>
            </div>
            <div class="sup left">
              <div class="inr" lang="y">
                <div class="fraction_box">
                  <span>1</span>
                  <span>10</span>
                </div>
                배
              </div>
            </div>
          </div>
          <div class="item center">
            <span>4.7</span>
            <div class="sup left">
              <div class="inr" lang="y">
                <div class="fraction_box">
                  <span>1</span>
                  <span>10</span>
                </div>
                배
              </div>
            </div>
          </div>
          <div class="item">
            <div class="input_wrap">
              <math-field data-answer-single="47"></math-field>
            </div>
            <div class="sup right">
              <div class="inr" lang="y">
                <div class="fraction_box">
                  <span>1</span>
                  <span>10</span>
                </div>
                배
              </div>
            </div>
          </div>
          <div class="item">
            <div class="input_wrap">
              <math-field data-answer-single="470"></math-field>
            </div>
            <div class="sup right">
              <div class="inr" lang="y">
                <div class="fraction_box">
                  <span>1</span>
                  <span>10</span>
                </div>
                배
