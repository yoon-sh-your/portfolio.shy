/* 클릭 유도 손가락 이미지 */
.pointer::after {
  content: '';
  width: 56px;
  height: 64px;
  background: url(../img/cursor_pointer_small.svg) no-repeat center center / 100%;
  position: absolute;
  top: 50%;
  left: 50%;
