/* .ema522_09_su_0003 .page_9 { */
.ema522_09_su_0003 .page_9 .solve_box_wrap {
    width: 95%;
    margin: 30px auto 0;
}

.ema522_09_su_0003 .page_9 .solve_box {
    flex: 1;
    height: 306px;
    border: 3px dashed #c6c6c6;
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    border-bottom: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.ema522_09_su_0003 .page_9 .draw_title {
    background: url(../../common_contents/img/EMA522_08_SU/0002_titlebg.svg) no-repeat left top;
    background-size: auto 100%;
    height: 40px;
    padding: 0 16px;
}

.ema522_09_su_0003 .page_9 .draw_title.medium {
    background-image: url(../../common_contents/img/EMA522_08_SU/0002_titlebg1.svg);
}

.ema522_09_su_0003 .page_9 .draw_title span {
    line-height: 40px;
    color: var(--primary-blue-800);
}

.ema522_09_su_0003 .page_9 .solve_box>p {
    background: url(../../common_contents/img/EMA522_08_SU/0002_bg.png) no-repeat 52% 100% / 250px;

    width: 100%;
    height: 90px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.ema522_09_su_0003 .page_9 .solve_box:last-child>p {
    background: url(../../common_contents/img/EMA522_08_SU/0002_bg1.png) no-repeat 52% 100% / 300px;
}

.ema522_09_su_0003 .page_9 .solve_box:first-child>ol {
    margin-top: 40px;
    font-size: 32px;
}

.ema522_09_su_0003 .page_9 .solve_box:first-child>ol li {
    padding-left: 20px;
    margin-bottom: 20px;
}

.ema522_09_su_0003 .page_9 .solve_box:first-child>ol li::before {
    content: '';
    display: inline-block;
    width: 8px;
    height: 8px;
    position: relative;
    left: -10px;
    top: -8px;
    border-radius: 50%;
    background-color: var(--font-main);
    flex-shrink: 0;
    flex-grow: 0;
}

.ema522_09_su_0003 .page_9 .solve_box:last-child>div:nth-child(2) {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.ema522_09_su_0003 .page_9 .solve_box:last-child>div:nth-child(3) {
    font-size: 32px;
}

