/*EMA626_01_SU_0001_s*/
.ema626_01_su_0001#app_wrap {
  background: url(../img/EMA626_01_SU/0001_bg.png) no-repeat left bottom/857px, #F49E4C;
}

.ema626_01_su_0001 .text_box {
  color: #C63600;
  top: 320px;
  left: 376px;
}

.ema626_01_su_0001 .input_area .img {
  background-color: #DA511D;
}

.ema626_01_su_0001 .input_area label::after {
  background-color: #DA511D;
}

/*EMA626_01_SU_0003_s*/
.ema626_01_su_0003 .letCheck {
  width: 1276px;
  flex-wrap: nowrap;
}

.ema626_01_su_0003 .letCheck li:nth-child(2) .sub_txt .txt1 {
  transform: translate(90px, 47px);
}

.ema626_01_su_0003 .letCheck li:nth-child(2) .sub_txt .txt2 {
  transform: translate(35px, 95px);
}

.ema626_01_su_0003 .letCheck li:nth-child(2) .sub_txt .txt3 {
  transform: translate(-67px, 109px);
}

.ema626_01_su_0003 .letCheck li:nth-child(2) .sub_txt .txt4 {
  transform: translate(-12px, 2px);
}

.ema626_01_su_0003 .letCheck li:nth-child(3) .sub_txt .txt1 {
  transform: translate(47px, 39px);
}

.ema626_01_su_0003 .letCheck .back {
  flex-direction: column;
  justify-content: flex-start;
  font-size: 20px;
  font-weight: 700;
  padding: 16px 16px 0;
}

.ema626_01_su_0003 .letCheck .back .sub_img {
  position: relative;
}

.ema626_01_su_0003 .letCheck .back .sub_tit, .ema626_01_su_0003 .letCheck .back .txt {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: 700;
}

.ema626_01_su_0003 .letCheck .back .sub_tit::before {
  content: '';
  display: flex;
  width: 4px;
  height: 4px;
  background-color: #222;
  border-radius: 50%;
  margin-right: 10px;
}

.ema626_01_su_0003 .letCheck .back .sub_txt {
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
}

/*EMA626_01_SU_0004_s*/
.ema626_01_su_0004 .contents > .flex {
  flex: 1;
  gap: 26px;
}

.ema626_01_su_0004 .contents > .flex .video_wrap {
  width: 812px;
  height: 428px;
  aspect-ratio: unset;
  background: url(../img/EMA626_01_SU/0004_bg.png) no-repeat center right;
}

.ema626_01_su_0004 .input_area {
  display: flex;
  width: 817px;
}

.ema626_01_su_0004 .input_area .input_wrap {
  flex: 1;
}

.ema626_01_su_0004 .input_wrap math-field.textarea {
  height: 322px;
}

/*EMA626_01_SU_0005_s*/
.ema626_01_su_0005 section.title.type2 + section.contents {
  padding: 30px 0px;
}

.ema626_01_su_0005 .contents > .flex {
  gap: 26px;
}

.ema626_01_su_0005 .picture_wrap {
  width: 797px;
  flex: 0 0 812px;
}

.ema626_01_su_0005 .picture_wrap img {
  height: 100%;
  object-fit: cover;
}

.ema626_01_su_0005 .input_wrap > math-field.textarea {
  width: 797px;
  height: 322px;
}

.input_wrap math-field:not(.textarea) {
  margin-top: 12px;
}
