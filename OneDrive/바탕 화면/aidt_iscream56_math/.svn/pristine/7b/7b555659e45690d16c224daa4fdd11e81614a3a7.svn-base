/* 창의 프로젝트 공통 인트로 페이지 */
.intro_wrap {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;

    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.project_title_box {
    position: absolute;
    top: 108px;
    right: 90px;
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: start;
}

.project_title_box .title_box {
    width: 625px;
    background-color: #71AD47;
    border-radius: 40px;
    border: solid 12px #548235;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.project_title_box .title_box .project_title {
    width: 146px;
    height: 48px;
    border-radius: 48px;
    background-color: #8CB08A;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translate(-50%, -50%);
}

.project_title_box .title_box .main_title {
    text-align: center;
    padding: 44px 0 56px;
    font-size: 64px;
    line-height: 1.375;
    font-weight: 700;
    color: #fff;
}

.project_title_box .title_box .main_title .highlight {
    color: #FFFF00;
}

.project_title_box .title_box .sub_title {
    padding: 0 24px 24px;
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: start;
}

.project_title_box .title_box .sub_title>li {
    position: relative;
    display: flex;
    align-items: start;
    justify-content: start;
}

.project_title_box .title_box .sub_title>li+li {
    margin-top: 8px;
}

.project_title_box .title_box .sub_title>li .badge {
    width: 125px;
    height: 36px;
    border-radius: 36px;
    background-color: #E2EDC1;
    padding-left: 24px;
    position: relative;
    margin-right: 8px;
}

.project_title_box .title_box .sub_title>li .badge::before {
    content: '';
    width: 8px;
    height: 8px;
    border-radius: 8px;
    background-color: #41AD49;
    position: absolute;
    top: 14px;
    left: 8px;
}

.project_title_box .title_box .sub_title>li .text {
    line-height: 36px;
}

.project_title_box .btn_box {
    margin-top: 46px;
}

/* 그리기도구 관련 */
.draw-tool-wrap.show {
display: block;
}

.draw-tool-wrap {
display: none;
position: absolute;
bottom: 120px;
left: 40px;
width: 284px;
height: 464px;
background-color: #fff;
border-radius: 20px;
padding: 20px;
box-shadow: 0px 8px 24px 0px #0000001F;
}

.draw-tool-wrap-header {
display: flex;
justify-content: space-between;
align-items: center;
margin-bottom: 12px;
}

.draw-tool-wrap-title {
float: left;
width: 200px;
font-size: 24px;
font-weight: 700;
letter-spacing: -1px;
cursor: move;
user-select: none;
}

.draw-tool-wrap-body {
display: flex;
flex-direction: column;
gap: 12px;
}

.tool-row {
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
}

.tool-row.function-item button[type='button'] {
width: 52px;
min-width: 52px;
height: 52px;
border: 1px solid #d2d2d2;
border-radius: 12px;
background-repeat: no-repeat;
background-position: center;
background-color: #fff;
}

.tool-row.function-item button[type='button'].active {
border: 2px solid #3B71FE;
background-color: #EEF9FF;
}

.tool-row.function-item button[type='button'].inactive {
background-color: #F2F4F7;
opacity: 0.4;
}

