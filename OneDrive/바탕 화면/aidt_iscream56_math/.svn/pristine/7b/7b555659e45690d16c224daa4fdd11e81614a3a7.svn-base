.range-item {
margin: 11px 0;
}

.draw-scale-range {
position: relative;
-webkit-appearance: none;
width: 100%;
height: 8px;
background: #9E9E9E;
}

.draw-scale-range.inactive {
background: #D2D2D2;
}

.draw-trans-range {
position: relative;
-webkit-appearance: none;
width: 100%;
height: 8px;
background: url('../common/img/draw/range_bg.png') no-repeat center / cover;
}

.draw-trans-range.inactive {
background: url('../common/img/draw/range_bg_in.png') no-repeat center / cover;
}

.draw-scale-range:focus,
.draw-trans-range:focus {
border: none;
}

.draw-scale-range::-webkit-slider-thumb,
.draw-trans-range::-webkit-slider-thumb {
-webkit-appearance: none;
appearance: none;
width: 16px;
height: 16px;
border-radius: 50%;
background: #ffffff;
border: 2px solid #222222;
cursor: pointer;
}

.draw-scale-range.inactive::-webkit-slider-thumb,
.draw-trans-range.inactive::-webkit-slider-thumb {
border-color: #D2D2D2;
background-color: #F2F4F7;
}

.draw-scale-range::before {
content: "";
display: inline-block;
width: 16px;
height: 16px;
background-color: #222222;
border: 1px solid #D2D2D2;
border-radius: 999px;
position: absolute;
left: -1px;
top: -4px;
}

.draw-scale-range::after {
content: "";
display: inline-block;
width: 24px;
height: 24px;
background-color: #222222;
border: 1px solid #D2D2D2;
border-radius: 999px;
position: absolute;
right: -3px;
top: -8px;
}

.draw-trans-range::before {
content: "";
display: inline-block;
width: 24px;
height: 24px;
background: url('../common/img/draw/range_before.png') no-repeat center / cover;
border: 1px solid transparent;
border-radius: 999px;
position: absolute;
left: -3px;
top: -8px;
}

.draw-trans-range::after {
content: "";
display: inline-block;
width: 24px;
height: 24px;
background: url('../common/img/draw/range_after.png') no-repeat center / cover;
position: absolute;
right: -3px;
top: -8px;
}

.draw-scale-range.inactive::before,
.draw-scale-range.inactive::after,
.draw-trans-range.inactive::before {
background: #F2F4F7;
border-color: #D2D2D2;
}

.arrow-item {
display: flex;
flex-direction: row;
gap: 12px;
}

.ic_polygon_pop {
display: none;
position: absolute;
top: 0px;
left: 0px;
padding: 20px;
background: #fff;
border: 1px solid #444;
border-radius: 8px;
}

.ic_polygon_pop.active {
display: flex;
flex-wrap: nowrap;
justify-content: center;
align-items: center;
gap: 20px;
}

.ic_polygon_pop .ipp_minus {
background: #fff url("../common/img/draw/icon_polygon_minus.svg") no-repeat center;
}

.ic_polygon_pop .ipp_plus {
background: #fff url("../common/img/draw/icon_polygon_plus.svg") no-repeat center;
}

.ic_polygon_pop button {
width: 40px;
height: 40px;
min-width: 40px;
padding:0;
border: 2px solid #D2D2D2;
border-radius: 100%;
}

.ic_polygon_pop span,
.ic_polygon_pop input,
.ic_polygon_pop label {
    display: inline;
    min-height: auto;
    padding:0;
    font-family: "Pretendard";
    font-weight: 400;
    font-size: 24px;
    line-height: 36px;
    letter-spacing: -0.5px;
}

.ic_polygon_pop label {
position: relative;
top: 4px;
left: -14px;
}

.ic_polygon_pop input {
width: 100%;
min-width: unset;
height: unset;
background: none;
border: none;
padding: 0px !important;
display: inline;
margin-left: -10px;
}

.ic_polygon_pop div {
width: 40px;
white-space: nowrap;
}

.p_red.inactive,
.p_yellow.inactive,
.p_green.inactive,
.p_blue.inactive,
.p_purple.inactive,
.p_black.inactive {
