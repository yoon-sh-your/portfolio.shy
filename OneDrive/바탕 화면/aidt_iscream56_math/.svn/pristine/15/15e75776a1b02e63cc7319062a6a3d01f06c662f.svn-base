.video_wrap {
  /* background-color: orange; */
  width: 812px;
  height: 428px;
  display: flex;
  justify-content: center;
  align-items: center;

  border-radius: 20px;
  border: 2px solid #F4F4F4;
}

.input_area {
  /* background-color: yellow; */
  width: 797px;
