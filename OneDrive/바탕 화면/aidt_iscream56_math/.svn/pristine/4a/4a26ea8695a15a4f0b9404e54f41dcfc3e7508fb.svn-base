    left: 85px;
}
.ema623_02_ih_0002 .boolean_wrap .button2 {
   left: 50%;
}
.ema623_02_ih_0002 .boolean_wrap .button3 {
   right: 85px;
}

/* .ema623_03_ih_0003  */
  .ema623_03_ih_0003 .quiz_area {
	position: relative;
	width: 1018px;
	height: 395px;
	margin: 0 auto;
  }
  .ema623_03_ih_0003 .quiz_area .image {
	width: 235px;
	position: absolute;
	top: 0;
	left: 0;
}
.ema623_03_ih_0003 .quiz_area .image1 {
	width: 240px;
    position: absolute;
	top: 75px;
    left: 76px;
}
.ema623_03_ih_0003 .quiz_area .image2 {
  width: auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: -30px;
  margin-left: 28px;
}
.ema623_03_ih_0003 .quiz_area .line_area {
	position: absolute;
	top: 0;
	left: 0;
	width: 390px;
	height: 390px;
	display: flex;
	flex-direction: column;
	flex: 1;
	border: dashed 2px #00a0e9;
}
.ema623_03_ih_0003 .quiz_area .line_area + .line_area {
	left: auto;
	right: 0;
  }
.ema623_03_ih_0003 .quiz_area .line_area .column {
	width: 100%;
	height: 78px;
	display: flex;
}
.ema623_03_ih_0003 .quiz_area .line_area .column + .column {
	border-top: dashed 1px #00a0e9;
  }
.ema623_03_ih_0003 .quiz_area .line_area .column .row {
	flex: 1;
	width: 78px;
	height: 100%;
}
.ema623_03_ih_0003 .quiz_area .line_area .column .row + .row {
	border-left: dashed 1px #00a0e9;
}
.ema623_03_ih_0003 .quiz_area .drawing_grid_area {
	position: absolute;
	top: 0;
	right: 0;
	width: 390px;
	height: 390px;
	border: none;
	background: none;
}



 