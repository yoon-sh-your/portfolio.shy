}
.ema623_01_ih_0001 .question_box p {
	font-weight: 700;
}

.ema623_02_ih_0002 .question_box .img_area {
	position: relative;
}
.ema623_02_ih_0002 .question_box .img_area .text {
	position: absolute;
	font-weight: 700;
}
.ema623_02_ih_0002 .question_box .img_area .text1 {
	top: 0;
	left: -45px;
}
.ema623_02_ih_0002 .question_box .img_area .text2 {
	top: 0;
	left: calc(50% - 177px);
}
.ema623_02_ih_0002 .question_box .img_area .text3 {
	top: 0;
	right: calc(50% - 350px);
}
