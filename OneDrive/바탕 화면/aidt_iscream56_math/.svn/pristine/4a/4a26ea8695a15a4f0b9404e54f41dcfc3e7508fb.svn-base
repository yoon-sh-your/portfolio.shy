.ema623_01_ih_0001 .question_box .input_area {
    position: relative;
}
.ema623_01_ih_0001 .question_box .img_area .text {
	position: absolute;
}
.ema623_01_ih_0001 .question_box .img_area .text1 {
	top: 311px;
