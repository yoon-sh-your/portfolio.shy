/* EMA513_05_su_0003 */
.ema513_05_su_0003 .table_box {
  width: 820px;
}


.ema513_05_su_0003 table .input_wrap {
  min-width: 0px;
  align-items: center;
}
.ema513_05_su_0003 .input_wrap input {
  width: 80px;
}
.ema513_05_su_0003 .contents > .flex {
  gap: 26px;
  align-items: flex-start;
}

.ema513_05_su_0003 .page_3 table {
  width: 996px;
}

.page_1 .table_box th,
td {
  width: 13%;
  font-size: 24px;
  font-weight: 700;
  line-height: 36px;
  text-align: center;
  padding: 5px;
}

.page_1 table {
  margin: 20px 0px;
}

.table_box th,
td {
font-size: 24px;
font-weight: 700;
line-height: 36px;
text-align: center;
}

.table_box th:nth-child(1) {
  background-color: #fce3e5; 
  width: 230px;
}
.page_3 table {
  width: 996px;
}

.page_3  tr>td:nth-child(1) {
  width: 633px;
}


.page_3 tr>td:nth-child(2) {
  width: 120px; 
}

.page_3 tr>td:nth-child(3){
  width: 239px;
}

.table_box th {
  border: 1px solid var(--Text-Gray-900, #855252);
}

.table_box tr:nth-child(1) td:nth-child(1) {
  width: 230px;
  background-color: #fce3e5; 
}

.table_box td {
  border: 1px solid var(--Text-Gray-900, #855252);
}

.page_3 .table_box td:nth-child(3) {
  height: 80px;
}

.table_box th:nth-child(5) {
  padding: 0px;
}


.table_box th:nth-child(4),
.table_box th:nth-child(6) {
  padding: 0px;
}

.ema513_05_su_0003 .inputs .input_wrap math-field.textarea {
  min-height: 120px;
  width: 680px;
}


.ema513_05_su_0003 .page_1 .input_wrap math-field:not(.textarea) {
  width: 80px;
}

.ema513_05_su_0003[data-current-page='page_1'] .btnSubmit {
  display: none;
}

.ema513_05_su_0003[data-current-page='page_3'] .btnCheck,
.ema513_05_su_0003[data-current-page='page_4'] .btnCheck {
  display: none;
}


.ema513_05_su_0003[data-current-page='page_2'] .key,
.ema513_05_su_0003[data-current-page='page_2'] .btnSubmit {
  display: none;
}


.dragndrop_fraction_wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dragndrop_fraction_wrap .drag_group{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 10px;
  width: 590px;
  height: 170px;
  border: 1px solid #808080;
  border-radius: 12px;
  padding: 20px;
}
.dragndrop_fraction_wrap .drag_item{
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60px;
  height: 60px;
  border-radius: 10px;
  background-color: #f0f0f0;
  text-align: center;
  font-size: 32px;
}
.dragndrop_fraction_wrap .drag_item[data-pair="1"]{
  min-width: 240px;
  background-color: #CCD8EE;
}
.dragndrop_fraction_wrap .drag_item[data-pair="2"]{
  background-color: #FDDDCF;
}   
.dragndrop_fraction_wrap .drag_item[data-pair="3"]{
  background-color: #D4E6C2;
}   
.dragndrop_fraction_wrap .drop_group{
  display: flex;
  flex-wrap: wrap;
  gap: 10px;  
  margin-top: 60px;
}   
.dragndrop_fraction_wrap .drop_item{
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 70px;
  height: 70px;
  border-radius: 10px;
  border: 1px solid #000;

}
.dragndrop_fraction_wrap .drop_item[data-pair="1"]{
  min-width: 240px;
}

.ema513_05_su_0003 .page_3 .picture_wrap {
  width: 400px;
  height: 390px;
  flex: none;
}

.ema513_05_su_0003 .page_3 .picture_wrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.page_1 .table_box th,
td {
  padding: 3px;
}
.ema513_05_su_0003 .page_3 table {
  width: 100%;
}

.ema513_05_su_0003 .page_3 .flex {
  justify-content: center;
}
.ema513_05_su_0003 .page_3  .input_wrap math-field:not(.textarea) {
  width: 100%;
}

.ema513_05_su_0003 .input_wrap {
  width: 100%;
  height: 100%;
}


.ema513_05_su_0003 .page_4 .input_wrap textarea {
  min-height: 340px;
}

.ema513_05_su_0003 .input_area {
  transform: translate(8%, 15%);
}


.dragndrop_fraction_wrap .drop_item[data-pair="1"] {
  width: 245px;
}
