/* ema524_03_SU_0002 */

.ema524_03_su_0002 .video_wrap {
  background: url(../../common_contents/img/ema524_02_SU/0002_contents.png)
    no-repeat center 40% / 110%;
}
.ema524_03_su_0002 .video_wrap p {
  position: absolute;
  top: 50.5%;
  left: 170px;
  text-align: center;
  font-size: 14px;
  line-height: 20px;
}

/* ema524_03_SU_0003_s page1 */

.ema524_03_su_0003 .page_1 .picture_wrap {
  background: url(../../common_contents/img/ema524_02_SU/0002_contents.png)
    no-repeat center 60% / 120%;
}
.ema524_03_su_0003 .picture_wrap text {
  transform: translateX(245px) translateY(490px) scale(1);
}

.ema524_03_su_0003 .image-content text {
  transform: translateX(185px) translateY(470px) scale(1.1);
}

.ema524_03_su_0003 .page_1 .picture_wrap img {
  display: none;
}

.ema524_03_su_0003 .picture_wrap p {
  position: absolute;
  top: 49%;
  left: 135px;
  text-align: center;
}

.ema524_03_su_0003 .page_1 .input_wrap math-field:not(.textarea) {
  width: 552px;
}

/* ema524_03_SU_0003_s page2 */

.ema524_03_su_0003 .page_2 .contents_img {
  margin: 0 auto 20px;
}

.multiply-box {
  max-width: 1108px;
  margin: 0 auto;
}
.multiply-box > div {
  padding: 10px 105px;
  height: 231px;
}

.multiply-box > div > div {
  margin-bottom: 20px;
}
.multiply-box > div:first-child {
  background: url(../../common_contents/img/EMA524_01_SU/0003_object1.png)
    no-repeat left center;
  background-size: contain;
}
.multiply-box > div:last-child {
  background: url(../../common_contents/img/EMA524_01_SU/0003_object2.png)
    no-repeat left center;
  background-size: contain;
}

.multiply-box > img {
  width: 96.5%;
  margin-left: 3%;
}

.multiply-box > div img {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
}

/* ema524_03_SU_0003_s page3 */

.ema524_03_su_0003 .page_3 .picture_wrap {
  background: url(../../common_contents/img/ema524_02_SU/0002_contents.png)
    no-repeat center 60% / 120%;
}
.ema524_03_su_0003 .page_3 .picture_wrap img {
  display: none;
}

.ema524_03_su_0003 .page_3 .input_wrap {
  flex-direction: row;
  align-items: center;
  gap: 12px;
}

/* ema524_03_SU_0004_s page1 */
.ema524_03_su_0004 .page_1 .wrap {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin: 0px auto 0;
}

.ema524_03_su_0004 .page_1 .wrap .textarea {
  min-height: 60px;
}

/* ema524_03_SU_0004_s page2 */

.ema524_03_su_0004 .page_2 .fra_parens {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50px;
}

.ema524_03_su_0004 .page_2 .fra_parens .input_wrap {
  flex-direction: row;
}

.ema524_03_su_0004 .fraction_box .answer2 {
  text-align: center;
}

/* ema524_03_SU_0004_s page3 */
.ema524_03_su_0004 .page_3 .question_box {
  width: 902px;
  height: 271px;
  background: url(../../common_contents/img/ema524_02_SU/0004_bg.png) no-repeat
    left center / 100%;
  margin: 50px auto 0;
}
.ema524_03_su_0004 .page_3 .question_box .wrapper {
  width: 100%;
  margin-bottom: 2%;
}

.ema524_03_su_0004 .page_3 .question_box .wrapper .box:nth-child(1) {
  width: 43%;
}
.ema524_03_su_0004 .page_3 .question_box .wrapper .box:nth-child(2) {
  width: 58%;
  gap: 20px;
}

.ema524_03_su_0004
  .page_3
  .question_box
  .wrapper
  .box:nth-child(1)
  > .arrow-row {
  gap: 85px;
  margin: 10px auto;
  padding-left: 27px;
}
.ema524_03_su_0004
  .page_3
  .question_box
  .wrapper
  .box:nth-child(1)
  > .arrow-row
  > div {
  gap: 5px;
}
.ema524_03_su_0004
  .page_3
  .question_box
  .wrapper
  .box:nth-child(2)
  > .arrow-col {
  gap: 80px;
}

.ema524_03_su_0004
  .page_3
  .question_box
  .wrapper
  .box:nth-child(2)
  > .arrow-col
  > div {
  width: 100%;
  text-align: center;
  background: url(../../common_contents/img/EMA524_01_SU/0004_arrow2.svg)
    no-repeat left center / 100%;
}
.ema524_03_su_0004
  .page_3
  .question_box
  .wrapper
  .box:nth-child(2)
  > .arrow-col
  > div
  > div {
  gap: 5px;
  background-color: var(--bg-default);
  width: 70px;
  margin: 0 auto;
}

/* ema524_03_SU_0004_s page4 */

.ema524_03_su_0004 .page_4 .wrap {
  display: flex;
  gap: 30px;
  flex-direction: column;
  margin: 0px auto 0;
}

.ema524_03_su_0004 .page_4 .wrap .textarea {
  min-height: 60px;
}

/* ema524_03_SU_0005_s */

.ema524_03_su_0005 .wrap > div {
  width: 1200px;
  margin: 50px auto 0;
  justify-content: space-between;
}

.ema524_03_su_0005 .wrap > div > div {
  min-width: 280px;
}

/* ema524_03_SU_0006_s */

.ema524_03_su_0006 .input_area {
  margin-top: 300px;
}
.ema524_03_su_0006 .input_wrap {
  flex-direction: row;
