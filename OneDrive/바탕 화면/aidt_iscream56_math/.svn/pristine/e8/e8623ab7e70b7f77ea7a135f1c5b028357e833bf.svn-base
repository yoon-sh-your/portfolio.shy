/* ema524_02_SU_0003_s page2 */

.ema524_02_su_0003 .question_box {
  width: 1356px;
  margin: 0 auto;
  height: 400px;
  gap: 60px;
}
.ema524_02_su_0003 .arrow_img_wrap {
  min-width: 50px;
}
.ema524_02_su_0003 img.arrow_img {
  width: 100%;
}
.ema524_02_su_0003 .demo_wrap {
  width: 100%;
}

/* count 박스 세로형  */
.count_wrap.column {
  display: flex;
  position: relative;
  min-width: 396px;
  gap: 30px;
  padding-left: 30px;
}

/* count 박스 세로형 숫자부분 */
.count_wrap.column .num {
  letter-spacing: -2px;
  position: absolute;
  left: 0px;
  top: -25px;
}

.count_wrap.column .num-ex-wrap {
  position: absolute;
  left: -10px;
  bottom: 0px;
}
.count_wrap.column .num-ex-wrap .num-ex {
  position: absolute;
  left: -20px;
  top: -40px;
}

.count_wrap.column .num:last-child {
  top: auto;
  bottom: -45px;
}

/* count 박스 세로형 수치부분 */
.count_column {
  position: relative;
  display: flex;
  width: 180px;
  height: 280px;
  box-sizing: border-box;
}
.count_column .boolean_count_wrap {
  flex-direction: column;
  width: 100%;
  height: 100%;
  border: 2px solid var(--font-main);
  gap: 1px;
}

.count_column .boolean_count_wrap li {
  position: relative;
  min-width: 100%;
  height: 28px;
}
.count_column .boolean_count_wrap li.selected {
  background-color: var(--font-main-500);
}
.boolean_count_wrap li:not(:first-child)::before {
  content: "";
  background-image: repeating-linear-gradient(
    to left,
    var(--font-main),
    var(--font-main) 6px,
    transparent 6px,
    transparent 10px
  );
  width: 100%;
  height: 1px;
  position: absolute;
  top: -2px;
  left: 0px;
}
.boolean_count_wrap button.selected {
  background-color: #d2d2d2;
}
/* count 박스 세로형 예제부분 */
.demo_wrap .count_column .boolean_count_wrap li {
  pointer-events: none;
}
.demo_wrap .count_column .boolean_count_wrap li.selected {
  background-color: var(--secondary-coral-300);
}

.boolean_count_wrap.col {
  width: 180px;
  height: 280px;
}
.boolean_count_wrap button.correct {
  background-color: var(--font-main);
}

