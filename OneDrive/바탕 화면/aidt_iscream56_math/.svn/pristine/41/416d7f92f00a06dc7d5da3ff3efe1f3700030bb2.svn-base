    height: 320px;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    border-radius: 0;
    border:0;
    &:hover {
      border-color:transparent;

      .text {
        border-color: var(--primary-blue-300);
      }
    }
    &.selected {
      border-color:transparent;

      .text {
        border-color: var(--font-main);
      }
    }
    &.selected.correct {
      .text {
        border-color: var(--primary-blue);
        background-color: rgba(59, 113, 254, 0.30);
      }
    }
    &.hint {
      border-color:transparent;
      .text {
        border-color: var(--secondary-red);
      }
    }
    &.figure1 {
      width:240px;
    }
    &.figure2 {
      width:150px;

      .text {
        margin-left: -50px;
      }
    }
    &.figure3 {
      width:320px;
    }
    &.figure4 {
      width:250px;
    }
    &.figure5 {
      width:250px;
    }

