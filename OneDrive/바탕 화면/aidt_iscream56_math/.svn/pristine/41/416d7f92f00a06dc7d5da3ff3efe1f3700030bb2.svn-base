      display: flex;
      align-items: center;
      justify-content: center;
      width:60px;
      height: 60px;
      font-size: 32px;
      font-weight: 700;
      border:4px transparent solid;
      border-radius: 50%;
      margin-bottom: 25px;
      flex-shrink: 0;
      margin-left: -145px;
    }
  }

  .drag_group {
    display: flex;
    align-items: center;
    justify-content: center;

    .drag_item {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      height: 228px;

      &.figure2 {
        padding: 0 10px;
        .text {
          margin-left:-30px;
        }
      } 
    }
    .text {
      font-size: 32px;
      font-weight: 700;
      margin:20px 0 -30px -87px;
    }
    .img {
      display: flex;
      transform: scale(0.7);
    }
  }
  .summarize img {
    margin-top:-20px;
  }
  .summarize .summarize_text {
    margin-top: 60px;
  }
} 

.form_box {
  display: flex;
  align-items: center;
  font-size: 32px;
  font-weight: 700;
  margin-top: 30px;

  .row1 {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 77px;
    background-color: #FDEBE3;
    padding: 0 56px;
  }
  .row2 {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 77px;
    border:1px #DADADA solid;
    border-top: 0;
    gap:60px;
  }

  li:first-child {
    .row1 {
      border-right:1px #fff solid;
      border-radius: 20px 0 0 0;
    }
    .row2 {
      border-radius: 0 0 0 20px;
    }
  }
  li:last-child {
    .row1 {
      border-radius: 0 20px 0 0;
    }
    .row2 {
      border-radius: 0 0 20px 0;
    }
  }

  .drop_item {
    position:relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width:86px;
    height: 60px;
    border:2px #3B71FE solid;
    border-radius: 12px;

    .drag_item .img {
      display: none;
    }
  }
}

