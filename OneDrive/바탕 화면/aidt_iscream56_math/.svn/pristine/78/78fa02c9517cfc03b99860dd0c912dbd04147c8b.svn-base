.ema523_08_ih_0004 .boolean_wrap {
  width: 983px;
  height: 240px;
  background: url(./../img/EMA523_08_IH/0004_01.png) no-repeat 50% / 100% auto;
  justify-content: center;
}
.ema523_08_ih_0004 .boolean_wrap button {
  width: auto;
  height: auto;
  background: none;
  border-radius: 0;
  aspect-ratio: unset;
  padding: 0;
  font-weight: 700;
  border: 0;
  position: relative;
}
.ema523_08_ih_0004 .boolean_wrap button + button {
  margin-top: 18px;
}
.ema523_08_ih_0004 .boolean_wrap button:after {
  content: '';
  display: inline-block;
  width: 60px;
  height: 60px;
  mask: url(./../../common_practice/common/img/icon_checked_round.svg) no-repeat 50% / 100% auto;
  background-color: transparent;
  position: absolute;
  top: -18px;
  left: -47px;
}
.ema523_08_ih_0004 .boolean_wrap button.selected:after {
  background-color: var(--font-main);
}
.result .ema523_08_ih_0004 .boolean_wrap button[data-answer-single='true']:after {
  background-color: var(--secondary-red);
}
.result .ema523_08_ih_0004 .boolean_wrap button.selected[data-answer-single='true']:after {
  background-color: var(--primary-blue);
}
