/* 분수 */
.fraction_inn {
  display: flex;
  align-items: center;
}

.operations {
  display: flex;
  align-items: center;
  font-size: 32px;
  font-weight: 700;
  /* gap: 4px; */
}

.operations .input_wrap {
  align-items: center;
  min-width: 80px;
}

.input_wrap math-field:not(.textarea) {
  width: 80px;
  height: 60px;
}

/* 비디오, 사진 페이지 공통 */
.contents>.flex {
  gap: 26px;
}

.video_wrap {
  width: 812px;
  height: 428px;
}

.video_wrap .play {
  z-index: 999;
}

.video_wrap {
  background: none;
}

.flex.align_start .input_area,
.flex.align_start math-field.textarea {
  width: 797px;
}

.flex.align_start .input_area {
  height: 402px;
}

/* container */
.container_515 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30px;
  background-repeat: no-repeat;
}

/* 슬라이드 페이지 공통 */
.page math-field.textarea {
  width: 100%;
}

.page>.question_box {
  width: calc(1635px - 160px - 40px);
  height: calc(578px - 48px - 20px - 64px - 12px);
  position: relative;
  margin: 0 auto;
  align-items: start;
}

.page.fraction_title .question_box {
  height: 418px;
  /* 434 - 16*/
}

/* 방법 1,2 */
.container_515 h3::before {
  display: none;
}

.method {
  color: #ffffff;
  text-shadow: -2px 0px #5BB8A1, 0px 2px #5BB8A1, 2px 0px #5BB8A1, 0px -2px #5BB8A1;
  position: relative;
  width: 115px;
  height: 40px;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  background-repeat: no-repeat;
  background-position: bottom right 10px;
  /* background-color: tomato; */
  padding-right: 50px;
}

.method[circle-number="1"] {
  background-image: url(../img/EMA515_04_SU/0005_cricle-1.png);
}

.method[circle-number="2"] {
  background-image: url(../img/EMA515_04_SU/0005_cricle-2.png);
}

.method::before {
  content: '';
  width: 97px;
  height: 23px;
  background-color: #5BB8A1;
  position: absolute;
  left: 0px;
  bottom: 0;
  z-index: -1;
  border-radius: 20px;
}

/* 분수 색칠 */
.boolean_count_wrap button.selected {
  background-color: #D2D2D2;
}

.boolean_count_wrap button.selected.correct,
.boolean_count_wrap button.correct {
  background-color: #D2D2D2;
  background-color: #666;
}

