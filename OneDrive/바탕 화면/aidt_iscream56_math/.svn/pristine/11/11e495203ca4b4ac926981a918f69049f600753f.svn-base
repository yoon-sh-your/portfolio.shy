    <!-- 공통 css-->
    <link rel="stylesheet" href="./../../common_contents/common/css/app.css" />

    <!-- 개별 -->
    <link rel="stylesheet" href="./../../common_practice/common/css/app.css" />
    <link rel="stylesheet" href="./../../common_practice/css/ema511_05.css" />
  </head>

  <body>
    <div id="app_wrap" class="ema511_05_ih_0005">
      <section class="title type2">
        <h2 data-head="5" lang="y">잘못 계산한 부분을 찾아 옳게 계산해 보세요.</h2>
      </section>

      <section class="contents">
        <div class="tabbox_wrap">
          <div class="top">
            <div class="flex gap_10">
              <span>48÷(8-4)+21</span>
              <div class="flex dir_col gap_10">
                <span>= 6-4+21</span>
                <span>= 2+21</span>
                <span>= 23</span>
              </div>
            </div>
          </div>
          <div class="tabbox">
            <span class="tit_box" lang="y">옳은 계산</span>
            <div class="conts_box">
              <div class="flex dir_col gap_20">
                <span class="txt">48÷(8-4)+21</span>
                <div class="question_box">
                  <div class="flex align_center gap_12">
                    =
                    <div class="input_wrap answer1">
                      <math-field data-answer-single="48÷4+21"></math-field>
                    </div>
                  </div>
                  <div class="flex align_center gap_12">
                    =
                    <div class="input_wrap answer2">
                      <math-field data-answer-single="12+21"></math-field>
                    </div>
                  </div>
                  <div class="flex align_center gap_12">
                    =
                    <div class="input_wrap answer3">
                      <math-field data-answer-single="33"></math-field>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="solve_area">
          <div class="inner_solve">
            <div class="flex">
              <strong class="tit_solve" lang="y">해설</strong>
              <div class="conts_solve">
                <p lang="y">(<span class="gh"></span>)가 있는 식은 (<span class="gh"></span>) 안을 가장 먼저 계산해야 합니다.</p>
              </div>
            </div>
            <div class="buttons_solve"></div>
          </div>
        </div>
        <div class="btn_area">
          <button class="btnType key">입력타입토글</button>
          <button class="btnReset">리셋</button>
          <button class="btnCheck">확인</button>
        </div>
      </section>
    </div>
