.ema522_09_su_0003 {
    h3 {
        margin-top: 0 !important;
    }

    .title_label {
        white-space: nowrap;
    }

    .hide {
        position: absolute;
        opacity: 0;
    }

    .page_1 {
        .img_area {
            position: relative;
            width: 1004px;
            height: 560px;
            margin: auto;

            .abs_1 {
                position: absolute;
                top: 37px;
                left: 47px;
                text-align: center;
                z-index: 1;
            }

            .abs_2 {
                position: absolute;
                top: 110px;
                right: 164px;
                z-index: 1;
            }
        }
    }

    .picture_wrap {
        position: relative;
        margin: auto;
        /* width: 897px; */
        height: 500px;

        .abs_1 {
            position: absolute;
            top: 50px;
            left: 22px;
            text-align: center;
            z-index: 1;
        }

        .abs_2 {
            position: absolute;
            top: 113px;
            right: 30px;
            z-index: 1;
        }
    }

    .page_9 {
        .solve_box_wrap {
            width: 95%;
            margin: 30px auto 0;
        }

        .solve_box {
            flex: 1;
            height: 306px;
            border: 3px dashed #c6c6c6;
            border-top-left-radius: 40px;
            border-top-right-radius: 40px;
            border-bottom: 0;
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .draw_title {
            background: url(../../common_contents/img/EMA522_08_SU/0002_titlebg.svg) no-repeat left top;
            background-size: auto 100%;
            height: 40px;
            padding: 0 16px;
        }

        .draw_title.medium {
            background-image: url(../../common_contents/img/EMA522_08_SU/0002_titlebg1.svg);
        }

        .draw_title span {
            line-height: 40px;
            color: var(--primary-blue-800);
        }

        .solve_box>p {
            background: url(../../common_contents/img/EMA522_08_SU/0002_bg.png) no-repeat 52% 100% / 250px;

            width: 100%;
            height: 90px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .solve_box:last-child>p {
            background: url(../../common_contents/img/EMA522_08_SU/0002_bg1.png) no-repeat 52% 100% / 300px;
        }

        .solve_box:first-child>ol {
            margin-top: 40px;
            font-size: 32px;
        }

        .solve_box:first-child>ol li {
            padding-left: 20px;
            margin-bottom: 20px;
        }

        .solve_box:first-child>ol li::before {
            content: '';
            display: inline-block;
            width: 8px;
            height: 8px;
            position: relative;
            left: -10px;
            top: -8px;
            border-radius: 50%;
            background-color: var(--font-main);
            flex-shrink: 0;
            flex-grow: 0;
        }

        .solve_box:last-child>div:nth-child(2) {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .solve_box:last-child>div:nth-child(3) {
            font-size: 32px;
        }
    }

    &[data-current-page='page_8'] .btn_area button,
    &:not([data-current-page='page_1'], [data-current-page='page_2'], [data-current-page='page_4'], [data-current-page='page_5']) .btn_area .btnSubmit,
    &:not([data-current-page='page_3'], [data-current-page='page_6'], [data-current-page='page_7']) .btn_area .btnCheck {
        display: none;
    }


}

