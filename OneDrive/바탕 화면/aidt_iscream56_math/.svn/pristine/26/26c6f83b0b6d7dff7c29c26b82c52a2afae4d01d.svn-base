/*EMA613_03_SU_0002_s*/
.ema613_03_su_0002 {
  .keyword {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-left: 40px;
    font-size: 32px;
    font-weight: 700;

    &::before {
      content: '*';
      height: 20px;
      line-height: normal;
    }
  }

  .video_wrap {
    flex: 1;
    aspect-ratio: 16 / 9;
    border-radius: 20px;
    border: 2px solid #f4f4f4;
    overflow: hidden;
    position: relative;
    background: url(../../common_contents/img/EMA613_03_SU/0002_img01.png) no-repeat bottom center / 100%;
  }

  .input_wrap math-field.textarea {
    max-height: 240px;
  }
}

/* EMA613_03_SU_0003_s */
.ema613_03_su_0003 {
  .page_1 {
    h3 {
      margin-bottom: 40px;
    }

    .answer1 math-field:not(.textarea) {
      width: 212px;
    }
  }

  .input_area {
    width: 715px;
    padding-right: 26px;
  }

  .video_wrap {
    background: url(../img/EMA613_03_SU/0002_img01.png) no-repeat center right 0 / 100%;
    /* border: none; */
  }

  .page_4 .input_area h3 {
    margin-bottom: 40px;
  }

  .page_2 {
    .input_wrap {
      width: 100%;

      math-field.textarea {
        height: 230px;
      }
    }
  }

  .summarize>div:nth-child(3) {
    height: 110px;
  }

  .page_4 span {
    font-weight: 700;
    font-size: 32px;
    line-height: 48px;
    letter-spacing: -1px;
  }

  .hidden_obj[data-pair='1'] {
    width: 62px;
    position: absolute;
    top: 0px;
    left: -225px;
  }

  &[data-current-page='page_2'] .contents>div.flex,
  &[data-current-page='page_3'] .contents>div.flex,
  &[data-current-page='page_4'] .contents>div.flex,
  &[data-current-page='page_2'] .btn_area .btnCheck,
  &[data-current-page='page_1'] .btn_area .btnSample,
  &[data-current-page='page_1'] .btn_area .btnSubmit,
  &[data-current-page='page_2'] .btn_area .btnSample,
  &[data-current-page='page_3'] .btn_area .btnSample,
  &[data-current-page='page_3'] .btn_area .btnType,
  &[data-current-page='page_3'] .btn_area .btnSubmit,
  &[data-current-page='page_4'] .btn_area .btnSubmit,
  &[data-current-page='page_4'] .btn_area .btnSample {
    display: none;
  }

  .page_3 {
    .dragndrop_fraction_wrap {
      display: flex;
      gap: 33px;
      justify-content: center;
      align-items: center;
      flex-direction: column;

      .items {
        display: flex;
        flex-wrap: wrap;
        width: 342px;
        justify-content: center;
        align-items: center;
        gap: 13px;
      }

      .drop_group_wrap {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 19px;
        margin-top: 45px;

        .items {
          display: flex;
          flex-wrap: wrap;
          width: 105px;
          justify-content: center;
          align-items: center;
          gap: 13px;
        }
      }

      .drag_group {
        display: flex;
        flex-wrap: wrap;
        gap: 13px;
        align-items: center;
        justify-content: center;
      }

      .drag_item {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #bcd5f0;
        border: 1px solid #1d1d1b;
        text-align: center;
      }

      .drag_item[data-pair='1'] {
        width: 66px;
        height: 66px;
        font-size: 44px;
      }

      .drag_item[data-pair='2'] {
        background-color: #fadceb;
        width: 46px;
        height: 46px;
        font-size: 24px;
      }

      .drag_item[data-pair='3'] {
        background-color: #c1dfc4;
        width: 34px;
        height: 34px;
        font-size: 16px;
      }

      .drop_group {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 22px;
        border: 2px solid #9e9e9e;
        border-radius: 40px;
        padding: 32px 43px;
      }

      .drop_item {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 77px;
        height: 77px;
        border: 1px solid #222;
        position: relative;
      }

      .drop_item[data-pair='1'] {
        width: 66px;
        height: 66px;
        font-size: 44px;
      }

      .drop_item[data-pair='2'] {
        width: 46px;
        height: 46px;
        font-size: 24px;
      }

      .drop_item[data-pair='3'] {
        width: 34px;
        height: 34px;
        font-size: 16px;
      }
    }
  }

  .page_4 .question_box+.question_box {
    margin-top: 72px;
  }
}

/*ema613_03_su_0004_s*/
.ema613_03_su_0004 {

  .question_box {
    padding-top: 82px;
  }

  .fraction_row {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding: 0 50px;
    justify-content: center;
  }

  .group_box {
    min-height: 80px;
    padding: 10px 5px;
    gap: 0;
  }

  .page_1 {
    .reveal_wrap {
      position: relative;
      display: flex;
      align-items: flex-end;
      gap: 23px;
      margin: 0 auto;
      width: 853px;
      height: 407px;
      background: url(../img/EMA613_03_SU/0004_img01.png) no-repeat center 0 / 100%;
      z-index: 1;

      .svg_box {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 130px;
        overflow: hidden;

        svg {
          position: absolute;
          top: 0;
          left: 0;
        }
      }

      .reveal_btn[data-pair='1'] {
        background-color: #feeee7;
        width: 269px;
        height: 112px;
        font-size: 20px;
        line-height: 32px;
        padding: 0;
      }

      .reveal_btn[data-pair='2'] {
        background-color: #feeee7;
        width: 269px;
        height: 112px;
        font-size: 20px;
        line-height: 32px;
        padding: 0;
      }

      .reveal_btn[data-pair='3'] {
        background-color: #feeee7;
        width: 269px;
        height: 112px;
        font-size: 20px;
        line-height: 32px;
        padding: 0;
      }

      .reveal_btn[data-pair='1']::before,
      .reveal_btn[data-pair='2']::before,
      .reveal_btn[data-pair='3']::before {
        top: 10px;
        left: 0;
        right: 0;
        bottom: 10px;
        background-color: #feeee7;
      }

      .reveal_btn {
        padding: 0px 10px 21px;
        border: none;
        background: none;
        width: 158px;
        height: 90px;
      }

      .reveal_btn::before {
        width: auto;
        height: auto;
        top: 10px;
        left: 0;
        right: 0;
        bottom: 20px;
      }

      .reveal_btn:not(:disabled):after {
        bottom: 10px;
      }

      .reveal_btn span {
        position: absolute;
        overflow: hidden;
        width: 0;
        height: 0;
      }
    }
  }

  .page_2 {
    .input_wrap .text_hint {
      bottom: calc(100% + 4px);
      top: unset;
    }
  }

  .page_1,
  .page_3 .input_wrap {
    display: block;
    margin: 0 auto;
  }

  .input_wrap math-field.textarea {
    height: 330px;
  }
}

.ema613_03_su_0004[data-current-page='page_1'] .btn_area .btnType,
.ema613_03_su_0004[data-current-page='page_1'] .btn_area .btnSubmit,
.ema613_03_su_0004[data-current-page='page_2'] .btn_area .btnSubmit,
.ema613_03_su_0004[data-current-page='page_3'] .btn_area .btnCheck {
  display: none;
}

