/* ema624_05_ih_0003 */
.ema624_05_ih_0003 .text_area {
	width: 815px;
	height: 136px;
	background: #d9d9d9;
	border-radius: 24px;
	position: relative;
}
.ema624_05_ih_0003 .text_area ul {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;
	gap: 80px;
}
.ema624_05_ih_0003 .text_area .boolean_wrap {
	display: flex;
