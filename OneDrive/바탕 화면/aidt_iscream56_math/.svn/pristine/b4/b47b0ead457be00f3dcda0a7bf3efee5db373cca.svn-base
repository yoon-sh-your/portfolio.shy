/* ema624_05_ih_0004 */
.ema624_05_ih_0004 .input_row {
	display: flex;
	align-items: center;
	margin-bottom: 120px;
}

/* ema624_05_ih_0005 */
.ema624_05_ih_0005 .text_area {
	width: 332px;
	height: 194px;
	border-radius: 20px;
	border: 2px solid #d6d7d8;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
}
.ema624_05_ih_0005 .text_area li {
	display: flex;
	align-items: center;
}
.ema624_05_ih_0005 .text_area li + li {
	margin-top: 30px;
}
.ema624_05_ih_0005 .boolean_wrap {
	position: absolute;
	left: 0;
	right: 0;
}
.ema624_05_ih_0005 .boolean_wrap > div {
	width: 100%;
}
.ema624_05_ih_0005 .boolean_wrap button {
	background-color: transparent;
	width: 100%;
	height: 80px;
	border-radius: 0;
	padding: 0;
	position: relative;
}
.ema624_05_ih_0005 .boolean_wrap button:not(:focus) {
	border-color: transparent !important;
	background-color: transparent !important;
}
.ema624_05_ih_0005 .boolean_wrap button:after {
	content: "";
	width: 60px;
	height: 60px;
	mask: url(../common/img/icon_checked_round.svg) no-repeat 50% / 60px auto;
	position: absolute;
	left: -10px;
	top: 0;
}
.ema624_05_ih_0005 .boolean_wrap button.selected:after {
	background-color: var(--font-main);
}
.ema624_05_ih_0005 .boolean_wrap button.correct[data-answer-single="true"]:after {
	background-color: var(--primary-blue);
}
.ema624_05_ih_0005 .boolean_wrap button.hint[data-answer-single="false"]:after {
	background-color: var(--secondary-red);
}

