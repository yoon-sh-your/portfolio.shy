.small_div_border {
  /* 기본은 테두리 없음 또는 연한 색 */
  /* border: 2px solid gray;
  padding: 10px; */
  /* transition: all 0.3s; */
}

.small_div_border.active {
  /* border: 3px solid #3B71FE; */
  border: 4px solid #000;
}

.small_div_border.active + .small_div_border.active {
  margin-left: -3px; /* border 겹치기 */
  border-left: none;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

/* 그룹의 처음과 끝 */
.small_div_border.active.group-start {
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}
.small_div_border.active.group-end {
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}