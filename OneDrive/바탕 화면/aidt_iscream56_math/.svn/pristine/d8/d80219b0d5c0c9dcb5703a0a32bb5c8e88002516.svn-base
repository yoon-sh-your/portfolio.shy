    top: 30px;
    left: 32px;
}
.ema623_03_ih_0001 .question_box .view_card .text {
    position: absolute;
    font-size: 24px;
    font-weight: 700;
    text-align: center;
    bottom: 4px;
    left: 50%;
    transform: translateX(-50%);
}
.ema623_03_ih_0001 .question_box .view_card .text1 {
   margin-left: 40px;
} 
.ema623_03_ih_0001 .question_box .view_card .text2 {
