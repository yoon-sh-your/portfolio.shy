    position: relative;
}
.ema623_03_ih_0001 .question_box .view_card_area {
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}
.ema623_03_ih_0001 .question_box .view_card {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    width: 100%;
    position: relative;
}
