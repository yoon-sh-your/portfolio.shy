<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EMA515_03_IH_0003_s</title>

    <!-- 공통 js-->
    <script src="../../common_contents/common/js/app.js"></script>
    <script src="../../common_practice/common/js/solve_area_act.js"></script>

    <!-- 공통 css-->
    <link rel="stylesheet" href="./../../common_contents/common/css/app.css" />

    <!-- 개별 -->
    <link rel="stylesheet" href="./../../common_practice/common/css/app.css" />
    <link rel="stylesheet" href="./../../common_practice/css/ema515_03.css" />
  </head>
  <body>
    <div id="app_wrap" class="ema515_03_ih_0003">
      <section class="title type2">
        <h2 data-head="3" lang="y">계산해 보세요.</h2>
      </section>

      <section class="contents">
        <div class="question_box justify_center">
          <div class="flex align_center gap_4">
            <div class="fraction_box">
              <span>1</span>
              <span>4</span>
            </div>
            +
            <div class="fraction_box">
              <span>6</span>
              <span>7</span>
            </div>
            =
            <div class="input_wrap">
              <math-field data-answer-single="1" class="w_80"></math-field>
            </div>
            <div class="fraction_box">
              <div class="input_wrap"><math-field data-answer-single="3"></math-field></div>
              <div class="input_wrap"><math-field data-answer-single="28"></math-field></div>
            </div>
            <div class="bracket">
              <span class="bracket-l"></span>
              <span>=</span>
              <div class="fraction_box">
                <div class="input_wrap"><math-field data-answer-single="31"></math-field></div>
                <div class="input_wrap"><math-field data-answer-single="28"></math-field></div>
              </div>
              <span class="bracket-r"></span>
            </div>
          </div>
          <div class="flex align_center gap_4">
            <div class="fraction_box">
              <span>11</span>
              <span>20</span>
            </div>
            +
            <div class="fraction_box">
              <span>3</span>
              <span>5</span>
            </div>
            =
            <div class="mixed_fraction">
              <div class="input_wrap">
                <math-field data-answer-single="1" class="w_80"></math-field>
              </div>
              <div class="fraction_box">
                <div class="input_wrap"><math-field data-answer-single="3"></math-field></div>
                <div class="input_wrap"><math-field data-answer-single="20"></math-field></div>
              </div>
            </div>
            <div class="bracket">
              <span class="bracket-l"></span>
              <span>=</span>
              <div class="fraction_box">
                <div class="input_wrap"><math-field data-answer-single="23"></math-field></div>
                <div class="input_wrap"><math-field data-answer-single="20"></math-field></div>
              </div>
              <span class="bracket-r"></span>
            </div>
          </div>
        </div>

        <div class="solve_area">
          <div class="inner_solve">
            <div class="flex">
              <strong class="tit_solve" lang="y">해설</strong>
              <div class="conts_solve">
                <!--start solve-->
                <div class="flex align_center gap_4">
                  <div class="fraction_box">
                    <span>1</span>
                    <span>4</span>
                  </div>
                  <span>+</span>
                  <div class="fraction_box">
                    <span>6</span>
                    <span>7</span>
                  </div>
                  <span>=</span>
                  <div class="fraction_box">
                    <span>7</span>
                    <span>28</span>
                  </div>
                  <span>+</span>
                  <div class="fraction_box">
                    <span>24</span>
                    <span>28</span>
                  </div>
                  <span>=</span>
                  <div class="fraction_box">
                    <span>31</span>
                    <span>28</span>
                  </div>
                  <span>=</span>
                  <div class="mixed_fraction">
                    <span class="whole">1</span>
                    <span class="fraction_box">
                      <span>3</span>
                      <span>28</span>
                    </span>
                  </div>
                </div>
                <!--end solve-->
                <!--start solve-->
                <div class="flex align_center gap_4 mt_20">
                  <div class="fraction_box">
                    <span>11</span>
                    <span>20</span>
                  </div>
                  <span>+</span>
                  <div class="fraction_box">
                    <span>3</span>
                    <span>5</span>
                  </div>
                  <span>=</span>
                  <div class="fraction_box">
                    <span>11</span>
                    <span>20</span>
                  </div>
                  <span>+</span>
                  <div class="fraction_box">
                    <span>12</span>
                    <span>20</span>
                  </div>
                  <span>=</span>
                  <div class="fraction_box">
                    <span>23</span>
                    <span>20</span>
                  </div>
                  <span>=</span>
                  <div class="mixed_fraction">
                    <span class="whole">1</span>
                    <span class="fraction_box">
                      <span>3</span>
                      <span>20</span>
                    </span>
                  </div>
                </div>
                <!--end solve-->
              </div>
            </div>
            <!-- <div class="buttons_solve">
                  
              </div> -->
          </div>
        </div>
        <div class="btn_area">
          <button class="btnType key">입력타입토글</button>
          <button class="btnReset">리셋</button>
          <button class="btnCheck">확인</button>
        </div>
      </section>
    </div>
  </body>
</html>
