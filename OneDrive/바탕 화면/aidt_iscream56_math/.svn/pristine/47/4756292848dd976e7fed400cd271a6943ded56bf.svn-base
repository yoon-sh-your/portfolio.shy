/* ema627_03_SU_0002 */
.ema627_03_SU_0002 .input_wrap {
  margin: 0 auto;
  flex-shrink: 0;
}
.ema627_03_SU_0002 dt {
  width: 189px;
  min-height: 72px;
  padding:12px 0;
  align-content: center;
  border-radius: 20px;
  background-color: #FFDE6A;
}
.ema627_03_SU_0002 dl:not(.dir_col) math-field.textarea {
  min-height: 100%;
  height: 100%;
}
.ema627_03_SU_0002 dd {
  width: 600px;
}
.ema627_03_SU_0002 dd math-field.textarea {
  width: 100%;
  min-width: 100%;
}
.ema627_03_SU_0002 dd.h_cst1 math-field.textarea {
  height: 96px;
}
.ema627_03_SU_0002 dl.h_cst2 dt {
  height: 388px;
} 
.ema627_03_SU_0002 dd.flex > div {
  width: calc(50% - 8px);
  min-width: calc(50% - 8px);
  height: 340px;
}
.ema627_03_SU_0002 dd.flex math-field.textarea {
  width:100%;
}
.ema627_03_SU_0002 .canvas_wrap {
  width:600px;
  height: 600px;
  background: url(../../common_project/img/EMA627_03_SU/EMA627_03_SU_0002_grid.svg) no-repeat;
  background-size: cover;
}

/* ema627_03_su_0003 */
.ema627_03_su_0003 .input_wrap {
  display: block;
  margin: 0 auto;
}
.ema627_03_su_0003 .input_wrap math-field {
