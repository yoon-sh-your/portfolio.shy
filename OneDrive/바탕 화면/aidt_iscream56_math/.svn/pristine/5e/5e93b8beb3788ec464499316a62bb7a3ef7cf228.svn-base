/* .ema621_08_su_0003 */
.ema621_08_su_0003 .question_box {
  position: relative;
}
.ema621_08_su_0003 .boolean_wrap {
  display: flex;
  gap: 50px;
}
.ema621_08_su_0003 .boolean_wrap button {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  font-size: 32px;
  border-radius: 0;
  font-weight: 400;
  border: 0;
} 

.ema621_08_su_0003 .boolean_wrap button:first-child {
  width: 290px;
  height: 90px;
  background: url(../img/EMA621_08_SU/0003_bg1.png) no-repeat;
  background-size: cover;
}
.ema621_08_su_0003 .boolean_wrap button:nth-of-type(2) {
  width: 290px;
  height: 90px;
  background: url(../img/EMA621_08_SU/0003_bg2.png) no-repeat;
  background-size: cover;
} 

.ema621_08_su_0003 .boolean_wrap button.selected {
  border: 0;
}
.ema621_08_su_0003 .boolean_wrap button:before {
  content: '';
  position: absolute;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 84px;
  height: 84px;
  border: 6px solid transparent;
  border-radius: 50%;
  
}

.ema621_08_su_0003 .boolean_wrap button.selected:before {
  border-color: var(--font-main);
}

.ema621_08_su_0003 .boolean_wrap button.hint[data-answer-single="true"]:before,
.ema621_08_su_0003 .boolean_wrap button.selected.correct:before {
  top: -3px;
  border-width: 6px;
  border-color: #3B71FE;
  background-color: rgba(59, 113, 254, 0.3);
}
.ema621_08_su_0003 .boolean_wrap button.hint[data-answer-single="true"][data-correction="false"]:before {
  top: -3px;
  border-width: 6px;
  border-color: var(--secondary-red);
  background-color:rgba(238, 79, 36, 0.3);
}
