  position: absolute;
  top: 19px;
  color: #222;
  font-size: 24px;
  font-weight: 700;
  left: 50%;
  transform: translateX(-50%);
}

.correct {
  .marked-point {
    background-color: #3B71FE;
  }
  .mark-text {
    color: #3B71FE;
  }
}

.popup {
  position: absolute;
  display: none;
  max-width: unset;
  width: unset;
  max-height: unset;
  height: unset;
  height: 70px;
  padding: 8px;
  background-color: var(--primary-blue-800);
  overflow: unset;
  white-space: nowrap;
  border-radius: 70px;
}

.popup button {
  display: inline-block;
  width: 52px;
  height: 52px;
  min-width: auto;
  padding: 0;
  background-color: var(--bg-default);
  background-size: 32px;
  background-repeat: no-repeat;
  background-position: center;
  border: 1px solid var(--stroke-default);
  font-size: 0;
  border-radius: 50%;
  vertical-align: top;
}

.popup::after {
  content: '';
  position: absolute;
  width: 29px;
  height: 19px;
  background: url(../common/img/icon_bubble_tail.svg) no-repeat center / 100%;
  top: -15.5px;
  left: 50%;
  transform: translateX(-50%);
}
